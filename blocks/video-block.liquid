{% comment %}
	Renders a video block, utilizing the 'video' snippet.

	Accepts:
	- block: The block object containing settings.
	- section_id: The ID of the parent section (for unique elements).

	Usage:
	{% render 'video-block', block: block, section_id: section_id %}
{% endcomment %}

<div class="video-block-wrapper swiper-slide" {{ block.shopify_attributes }}>
	{%
		render 'video',
		main_image: block.settings.video_thumbnail,
		main_mobile_image: block.settings.video_thumbnail, // Use same thumbnail for mobile or allow separate setting
		SID: section_id | append: '-' | append: block.id,
		videoInput: block.settings.video_url
	%}
</div>

{% schema %}
	{
		"name": "Video Block",
		"settings": [
			{
				"type": "image_picker",
				"id": "video_thumbnail",
				"label": "Video Thumbnail (Optional)"
			},
			{
				"type": "textarea",
				"id": "video_url",
				"label": "Video Input (Embed or URL)"
			},
			{
				"type": "range",
				"id": "width",
				"label": "Block Width",
				"min": 10,
				"max": 100,
				"step": 5,
				"unit": "%",
				"default": 100,
				"info": "Sets the width percentage of this block within its row."
			},
			{
				"type": "range",
				"id": "width_mobile",
				"label": "Block Width Mobile",
				"min": 10,
				"max": 100,
				"step": 5,
				"unit": "%",
				"default": 100
			}
		],
		"presets": [
			{
				"name": "Video Block"
			}
		]
	}
{% endschema %}
