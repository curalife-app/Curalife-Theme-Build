<header class="simple-header">
  <div class="main-container container">
    <div class="header-content flex items-center justify-between p-4">
      <!-- Logo -->
      <div class="header__logo">
        <img class="max-h-[50px]" src="{{ section.settings.logo_img | image_url }}" alt="{{ shop.name }}">
      </div>

      <!-- Mobile Menu Icon -->
      <div class="menu-icon" onclick="toggleMenu()">
        <i class="fa-light fa-bars"></i>
      </div>

      <!-- Navigation Links -->
      <div class="header-links flex items-center gap-8">
        <i class="fa-light fa-times menu-close-icon" onclick="toggleMenu(true)"></i>

        {% for block in section.blocks %}
          <a {% if block.settings.is_button_style %}class="link-button"{% endif %} href="{% if shop.name == 'CuraLife Global' %}{{ block.settings.link_url_global }}{% else %}{{ block.settings.link_url }}{% endif %}" {% if block.settings.link_new_tab %}target="_blank"{% endif %}>
            {{ block.settings.link_title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</header>

<script>
  function toggleMenu(forceClose = false) {
    const links = document.querySelector('.header-links');
    const logo = document.querySelector('.header__logo');
    const menuIcon = document.querySelector('.menu-icon');

    if (forceClose || links.classList.contains('mobile-visible')) {
      links.classList.remove('mobile-visible');
      logo.classList.remove('hidden');
      menuIcon.classList.remove('hidden');
    } else {
      links.classList.add('mobile-visible');
      logo.classList.add('hidden');
      menuIcon.classList.add('hidden');
    }
  }

  document.querySelectorAll('.header-links a').forEach(link => {
    link.addEventListener('click', () => toggleMenu(true));
  });
</script>

<style>
  header.simple-header {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  header.simple-header .header-links a.link-button {
    background-color: var(--orange);
    color: black;
    border-radius: 30px;
    padding: 0.5rem 1rem;
  }

  header .menu-icon {
    display: none;
    color: white;
  }

  header .menu-close-icon {
    display: none;
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 1.5rem;
    color: white;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    header .header__logo img {
      max-height: 40px;
    }

    header .header-links {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: {{ section.settings.bg_color }};
      z-index: 1000;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    header .header-links.mobile-visible {
      display: flex;
    }

    header .header-links a {
      font-size: 1.5rem;
      padding: 1rem;
    }

    header .menu-icon,
    header .header__logo {
      display: block;
    }

    header .hidden {
      display: none;
    }

    header .menu-close-icon {
      display: block;
    }
  }
</style>

