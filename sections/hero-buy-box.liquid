{% assign prod = all_products['curaslim'] %}

<section class="hero-buy-box bg-[--light-blue]">
  <div class="container">
    <div class="hero-wrapper flex items-center justify-between w-full">
      <div class="content-wrapper">
        <h1 class="m-0">Curalin</h1>

        <p class="text-[--blue] text-[28px] mb-1">Your secret to effective, <br>fast weight loss</p>

        <p class="text-[16px]">Curaslim's unique formula boosts weight loss and optimizes energy and mood, making it an ideal companion for a vibrant, balanced life.</p>

        <ul class="text-[--blue] text-[22px] font-bold">
          <li class="mb-1">Appetite & Portion Control*</li>
          <li class="mb-1">Metabolism Boost*</li>
          <li class="mb-1">Support maintaining balanced blood glucose levels*</li>
          <li class="mb-1">Mood & Energy Lift*</li>
        </ul>

        <p class="text-[12px] opacity-30 leading-4">Statements made on this website have not been evaluated by the U.S. Food and Drug Administration. These products are not intended to diagnose, treat, cure, or prevent any disease. Information provided by this website or this company is not a substitute for individual medical advice.</p>
      </div>

      <div class="buy-box-wrapper w-3/5 min-w-[700px]">
        <div class="buy-box flex flex-col items-center p-8 bg-white" style="border-radius:150px">
          <div class="buy-box-wrapper-content flex items-center gap-8">
            <img class="h-[250px]" src="{{ prod.featured_image | image_url }}" alt="Curalin" loading="lazy">
            {% render 'product-cta-section-actions', section_id: section.id, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: "var(--orange)", title: title, isHighlightSubtitle: isHighlightSubtitle, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isHideInfo: isHideInfo %}
          </div>

          {% render 'trust-badges-widget', badgesContent: 'free-shipping,money-back,secure-checkout' %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero With Buy-Box",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "bg_color_bottom",
      "label": "Background Bottom Color",
      "default": "#DCD9D9"
    },
    {
      "type": "color_background",
      "id": "ticker_background_before",
      "label": "Ticker Background Before",
      "default": "linear-gradient(90deg, #F7F7F7 0%, rgba(255, 255, 255, .76) 49.3%, rgba(255, 255, 255, 0) 100%)"
    },
    {
      "type": "color_background",
      "id": "ticker_background_after",
      "label": "Ticker Background After",
      "default": "linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, .76) 49.3%, #F7F7F7 100%)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "As Featured On"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_top",
      "label": "Remove Top Padding"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_bottom",
      "label": "Remove Bottom Padding"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "featured_image",
          "label": "Featured Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero With Buy-Box"
    }
  ]
}
{% endschema %}