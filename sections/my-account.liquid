{%- comment -%} If store is US {%- endcomment -%}
{% if shop.name == 'CuraLife' %}
  {% assign invoice_id = "51da85a3c3dfa1f360b48852b64218b2" %}
  {% assign manage_subscription_url = '/tools/recurring/login' %}
{% elsif shop.name == "CuraLife Global" %}
  {% assign invoice_id = "656f0dbf9392657eed7feefc486781fb" %}
  {% assign manage_subscription_url = '/pages/manage-my-subscriptions' %}
{% endif %}

{% if customer.tags contains 'curalifer' %}
  {% assign show_curalifer_tab = true %}
{% endif %}

<section class="account-page py-12">
  <div class="container px-4 mx-auto">
    <h1 class="mb-8 text-3xl font-bold text-center">My Account</h1>

    <div id="tabs" class="account-dashboard">
      <div class="account-content">
        <!-- Desktop Navigation -->
        <nav class="account-menu desktop" aria-label="Account Navigation">
          <div class="menu-list p-4 bg-white rounded-lg shadow-lg">
            <div class="tabs space-y-2">
              {% if show_curalifer_tab %}
                <div class="tab-item">
                  <a href="#curalifer" class="tab-link" role="tab">
                    <i class="fa-thin fa-user-crown" aria-hidden="true"></i>
                    <span>Curalifer</span>
                  </a>
                </div>
              {% endif %}

              <div class="tab-item">
                <a href="#profile" class="tab-link" role="tab">
                  <i class="fa-thin fa-user" aria-hidden="true"></i>
                  <span>My Profile</span>
                </a>
              </div>

              <div class="tab-item">
                <a href="#orders" class="tab-link" role="tab">
                  <i class="fa-thin fa-credit-card" aria-hidden="true"></i>
                  <span>Orders</span>
                </a>
              </div>

              <div class="tab-item">
                <a href="#loyalty" class="tab-link" role="tab">
                  <i class="fa-thin fa-people-group" aria-hidden="true"></i>
                  <span>Loyalty</span>
                </a>
              </div>

              <div class="tab-item">
                <a href="#password" class="tab-link" role="tab">
                  <i class="fa-thin fa-key" aria-hidden="true"></i>
                  <span>Change Password</span>
                </a>
              </div>

              <a href="{{ manage_subscription_url }}" class="tab-link">
                <i class="fa-thin fa-calendar" aria-hidden="true"></i>
                <span>Subscriptions</span>
              </a>

              <a href="/account/logout" class="tab-link text-red-600">
                <i class="fa-thin fa-right-from-bracket" aria-hidden="true"></i>
                <span>Logout</span>
              </a>
            </div>
          </div>
        </nav>

        <!-- Mobile Navigation -->
        <div class="account-menu-mobile md:hidden w-full mb-6">
          <select id="mobile-dropdown" class="w-full p-4 bg-white border border-gray-200 rounded-lg shadow-sm" aria-label="Navigation Menu">
            {% if show_curalifer_tab %}
              <option value="#curalifer">Curalifer</option>
            {% endif %}
            <option value="#profile">My Profile</option>
            <option value="#orders">Orders</option>
            <option value="#loyalty">Loyalty</option>
            <option value="#password">Change Password</option>
            <option value="{{ manage_subscription_url }}">Subscriptions</option>
            <option value="/account/logout">Logout</option>
          </select>
        </div>

        <!-- Content Panels -->
        <div class="account-data flex-1">
          {% if show_curalifer_tab %}
            <div id="curalifer" class="tab-panel" role="tabpanel">
              <div class="panel-header">
                <h2 class="mb-2 text-2xl font-bold">My Curalife</h2>
                <p class="mb-6 text-gray-600">Your exclusive access to our recipes and workouts to help you live a healthier life.</p>
              </div>

              <div class="md:grid-cols-2 grid gap-6">
                <a href="/blogs/recipes" class="resource-card">
                  <div class="hover:shadow-lg p-6 transition-shadow bg-white rounded-lg">
                    <img src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/curalifer_recipies.png" alt="" class="object-cover w-full h-48 mb-4 rounded">
                    <h3 class="text-xl font-bold text-center">Recipes</h3>
                  </div>
                </a>

                <a href="/blogs/workouts" class="resource-card">
                  <div class="hover:shadow-lg p-6 transition-shadow bg-white rounded-lg">
                    <img src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/curalifer_exercise.png" alt="" class="object-cover w-full h-48 mb-4 rounded">
                    <h3 class="text-xl font-bold text-center">Workouts</h3>
                  </div>
                </a>
              </div>
            </div>
          {% endif %}

          <div id="profile" class="tab-panel" role="tabpanel">
            <div class="md:grid-cols-2 grid gap-6">
              <!-- Contact Information -->
              <div class="p-6 bg-white rounded-lg shadow-lg">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-xl font-bold">Contact Information</h3>
                  <a href="/account/addresses" class="btn-secondary">Edit</a>
                </div>

                <dl class="space-y-4">
                  <div class="flex justify-between">
                    <dt class="text-gray-600">First Name</dt>
                    <dd class="font-semibold">{{ customer.first_name }}</dd>
                  </div>
                  <div class="flex justify-between">
                    <dt class="text-gray-600">Last Name</dt>
                    <dd class="font-semibold">{{ customer.last_name }}</dd>
                  </div>
                  <div class="flex justify-between">
                    <dt class="text-gray-600">Email</dt>
                    <dd class="font-semibold">{{ customer.email }}</dd>
                  </div>
                </dl>
              </div>

              <!-- Shipping Address -->
              <div class="p-6 bg-white rounded-lg shadow-lg">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-xl font-bold">Shipping Address</h3>
                  <a href="/account/addresses" class="btn-secondary">Manage</a>
                </div>

                {% assign address = customer.default_address %}
                {% if address %}
                  <address class="not-italic">
                    <p class="mb-1">{{ address.first_name }} {{ address.last_name }}</p>
                    {% if address.company != blank %}<p class="mb-1">{{ address.company }}</p>{% endif %}
                    <p class="mb-1">{{ address.street }}</p>
                    <p class="mb-1">{{ address.city }}{% if address.province_code != blank %}, {{ address.province_code }}{% endif %}</p>
                    <p class="mb-1">{{ address.country }} {{ address.zip }}</p>
                    {% if address.phone != blank %}<p class="mb-1">{{ address.phone }}</p>{% endif %}
                  </address>
                {% else %}
                  <div class="text-center text-gray-500">
                    <i class="fa-thin fa-house-circle-xmark mb-2 text-4xl"></i>
                    <p>No shipping address added yet.</p>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>

          <div id="orders" class="tab-panel w-full" role="tabpanel">
            <div class="p-6 bg-white rounded-lg shadow-lg">
              {% render 'account-orders' %}
            </div>
          </div>

          <div id="loyalty" class="tab-panel" role="tabpanel">
            <div class="p-6 bg-white rounded-lg shadow-lg">
              {% render 'account-rewards' %}
            </div>
          </div>

          <div id="password" class="tab-panel" role="tabpanel">
            <div class="p-6 bg-white rounded-lg shadow-lg">
              {% render 'account-change-password' %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<style>
  :root {
    --primary-color: #0066CC;
    --primary-hover: #0052a3;
    --danger-color: #DC2626;
    --success-color: #059669;
  }

  .account-dashboard {
    @apply max-w-7xl mx-auto;
  }

  .account-content {
    @apply flex flex-col md:flex-row gap-8;
  }

  .account-menu.desktop {
    @apply hidden md:block w-full md:w-80 shrink-0;
  }

  .tab-link {
    @apply flex items-center gap-3 w-full p-4 rounded-lg transition-colors;
    @apply hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary;
  }

  .tab-link.active {
    @apply bg-primary text-white hover:bg-primary-hover;
  }

  .tab-panel {
    @apply opacity-0 pointer-events-none absolute w-full transition-opacity duration-300;
  }

  .tab-panel.active {
    @apply opacity-100 pointer-events-auto relative;
  }

  .btn-primary {
    @apply inline-flex items-center justify-center px-6 py-3 rounded-lg;
    @apply bg-primary text-white font-semibold transition-colors;
    @apply hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2;
  }

  .btn-secondary {
    @apply inline-flex items-center justify-center px-4 py-2 rounded-lg;
    @apply border border-gray-300 bg-white text-gray-700 font-semibold transition-colors;
    @apply hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2;
  }

  .resource-card {
    @apply block transition-transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-primary;
  }

  @media (max-width: 768px) {
    .account-content {
      gap: 4;
    }
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const tabs = document.querySelector('#tabs');
  const tabPanels = document.querySelectorAll('.tab-panel');
  const tabLinks = document.querySelectorAll('.tab-link[role="tab"]');
  const mobileDropdown = document.querySelector('#mobile-dropdown');

  function activateTab(tabId) {
    // Deactivate all tabs
    tabLinks.forEach(link => {
      link.classList.remove('active');
      link.setAttribute('aria-selected', 'false');
    });

    tabPanels.forEach(panel => {
      panel.classList.remove('active');
    });

    // Activate selected tab
    const selectedTab = document.querySelector(`a[href="${tabId}"]`);
    const selectedPanel = document.querySelector(tabId);

    if (selectedTab && selectedPanel) {
      selectedTab.classList.add('active');
      selectedTab.setAttribute('aria-selected', 'true');
      selectedPanel.classList.add('active');
    }
  }

  // Handle click events
  tabLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const tabId = link.getAttribute('href');
      activateTab(tabId);

      // Update mobile dropdown
      if (mobileDropdown) {
        mobileDropdown.value = tabId;
      }
    });
  });

  // Handle mobile dropdown change
  if (mobileDropdown) {
    mobileDropdown.addEventListener('change', function() {
      const selectedValue = this.value;

      if (selectedValue.startsWith('#')) {
        activateTab(selectedValue);
      } else {
        window.location.href = selectedValue;
      }
    });
  }

  // Handle keyboard navigation
  tabLinks.forEach(link => {
    link.addEventListener('keydown', (e) => {
      const currentTab = document.querySelector('.tab-link.active');
      let nextTab;

      switch(e.key) {
        case 'ArrowRight':
        case 'ArrowDown':
          e.preventDefault();
          nextTab = currentTab.parentElement.nextElementSibling?.querySelector('.tab-link') ||
                   tabLinks[0];
          nextTab.focus();
          break;
        case 'ArrowLeft':
        case 'ArrowUp':
          e.preventDefault();
          nextTab = currentTab.parentElement.previousElementSibling?.querySelector('.tab-link') ||
                   tabLinks[tabLinks.length - 1];
          nextTab.focus();
          break;
        case 'Home':
          e.preventDefault();
          tabLinks[0].focus();
          break;
        case 'End':
          e.preventDefault();
          tabLinks[tabLinks.length - 1].focus();
          break;
      }
    });
  });

  // Activate first tab by default
  const firstTab = tabLinks[0]?.getAttribute('href');
  if (firstTab) {
    activateTab(firstTab);
  }
});
</script>
