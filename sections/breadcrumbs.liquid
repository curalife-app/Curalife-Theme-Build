{% if template.name != "index" %}
  <div class="container">
    <nav class="breadcrumb absolute top-[10px] z-10 text-[14px]">
      <a href="/">Home</a>

      {% if collection %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">{{ collection.title }}</span>
      {% elsif page %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">{{ page.title }}</span>
      {% elsif blog and article %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <a href="/blogs/{{ blog.handle }}">{{ blog.title }}</a>
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">{{ article.title }}</span>
      {% elsif blog %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">{{ blog.title }}</span>
      {% elsif template.name == 'list-collections' %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">Collections</span>
      {% elsif template.name == 'cart' %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">Cart</span>
      {% elsif template.name == 'search' %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">Search</span>
      {% elsif template.name == 'account' or request.path contains '/tools/recurring/portal' %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <a href="/account">My Account</a>
        {% if request.path contains '/tools/recurring/portal' %}
          <span class="breadcrumb-separator px-2"> &gt; </span>
          <span class="current-page">Subscriptions</span>
        {% endif %}
      {% endif %}

      {% if product %}
        {% if product.collections.size > 0 %}
          {% assign current_collection = product.collections.first %}
          <span class="breadcrumb-separator px-2"> &gt; </span>
          <a href="{{ current_collection.url }}">{{ current_collection.title }}</a>
        {% endif %}
        <span class="breadcrumb-separator px-2"> &gt; </span>
        <span class="current-page">{{ product.title }}</span>
      {% endif %}
    </nav>
  </div>

  <style>
    .current-page {
      color: {{ section.settings.current_color }};
    }
  </style>
{% endif %}

{% schema  %}
{
  "name": "Breadcrumb",
  "settings": [
    {
      "type": "color",
      "id": "current_color",
      "label": "Current page color"
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb",
      "category": "Navigation"
    }
  ]
}
{% endschema %}