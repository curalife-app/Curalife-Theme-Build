{% assign relatedCuralinKeywords = "Curalin,Glucose Support,Diabetes,Blood Sugar,Metabolic Health,Insulin Sensitivity,Healthy Diet,Wellness,Supplements,Holistic Health,Natural Remedies,Herbal Supplements,Type 2 Diabetes,Nutritional Support,Health Maintenance,Wellbeing,Healthy Lifestyle,Diabetic Support,Insulin Resistance,Healthy Living,Natural Health,Diabetes Support,Glucose Metabolism,Endocrine Health,Blood Glucose,Pancreatic Health,Diabetic Care,Low Glycemic Diet,Diabetic Nutrition,Glucose Regulation,Herbal Medicine,Health Optimization,Insulin Management,Endocrine Support,Diabetic Wellness,Metabolic Support,Glucose Homeostasis,Plant-Based Supplements,Sugar Management,Holistic Wellness,Herbal Health" | split: "," %}
{% assign relatedCuralinTags = "curalin,blood-sugar,glucose-support" | split: "," %}

{% assign relatedCuraslimKeywords = "Curaslim,Weight Loss,Appetite Control,Carb Blocker,Metabolism Boost,Fat Burner,Dietary Supplement,Calorie Burning,Body Fat Reduction,Slimming,Healthy Weight,Weight Management,Natural Weight Loss,Herbal Weight Loss,Satiety Support,Carb Inhibitor,Fat Metabolism,Weight Control,Diet Support,Herbal Slimming,Appetite Suppressant,Thermogenic Support,Calorie Control,Weight Reduction,Lean Body Support,Natural Appetite Suppressant,Herbal Appetite Control,Weight Wellness,Healthy Dieting,Herbal Diet Aid,Weight Balance,Fat Control" | split: "," %}
{% assign relatedCuraslimTags = "curaslim,weight-loss,appetite-control,carb-blocker" | split: "," %}

{% assign articleTags = article.tags | join: "," | split: "," %}

{% assign contentMatchesCuralin = false %}
{% assign contentMatchesCuraslim = false %}

{% for keyword in relatedCuralinKeywords %}
  {% if article.content contains keyword %}
    {% assign contentMatchesCuralin = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% for keyword in relatedCuraslimKeywords %}
  {% if article.content contains keyword %}
    {% assign contentMatchesCuraslim = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if contentMatchesCuralin %}
  {% assign ChosenBannerURL = CuralinBannerURL %}
{% elsif contentMatchesCuraslim %}
  {% assign ChosenBannerURL = CuraslimBannerURL %}
{% elsif articleTags contains relatedCuralinTags %}
  {% assign ChosenBannerURL = CuralinBannerURL %}
{% elsif articleTags contains relatedCuraslimTags %}
  {% assign ChosenBannerURL = CuraslimBannerURL %}
{% else %}
  {% assign ChosenBannerURL = CuralinCuraslimBannerURL %}
{% endif %}

<div class="sidebar-banner mb-10">
  <img class="w-full" src="{{ ChosenBannerURL }}" alt="sidebar banner" width="300" height="250" loading="lazy">
