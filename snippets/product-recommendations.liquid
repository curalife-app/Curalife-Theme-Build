{% assign productHandles = 'curalin,curaslim,joint-care,restful-sleep,magnesium' | split: ',' %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<div class="product-recommendations">
  <h2>Take Control of Your Wellness</h2>

  <div class="swiper product-slider">
    <div class="swiper-wrapper">
      {% for productHandle in productHandles %}
        {% assign product = all_products[productHandle] %}
        <div class="swiper-slide product-item">
          <img src="{{ product.metafields.custom.bottle_image | img_url: '200x' }}" alt="{{ product.title }}" class="product-image">
          <p class="product-name">{{ product.title }}</p>
          <p class="product-price">{{ product.price | money }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-nav swiper-button-prev"></div>
    <div class="swiper-nav swiper-button-next"></div>
  </div>

  <a href="/collections/all" class="shop-button">
    <button>Explore Our Supplements</button>
  </a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.product-slider', {
      slidesPerView: 1,
      spaceBetween: 10,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        768: {
          slidesPerView: 2
        },
      },
    });
  });
</script>

<style>
  .product-recommendations {
    --swiper-navigation-sides-offset: 10px;

    padding: 2rem;
    margin-top: 2rem;
    text-align: center;
    border-radius: 15px;
    background-color: #EBF1F3;
  }

  .product-slider {
    margin: 2rem 4rem;
  }

  .product-item {
    width: 180px;
  }

  .product-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
    background-color: white;
    padding: 0.5rem;
  }

  .product-name {
    margin: 0.5rem 0;
    font-weight: bold;
    color: var(--blue);
  }

  .product-price {
    color: #555;
  }

  .shop-button {
    background-color: #4a7c7d;
    color: white !important;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    cursor: pointer;
    text-decoration: none !important;
    font-weight: bold;
  }

  .swiper-button-prev,
  .swiper-button-next {
    color: #4a7c7d;
  }
</style>