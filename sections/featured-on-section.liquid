<section id="featured-section">
  <div class="container">
    <h4>{{ section.settings.title }}</h4>
    <div class="items-wrapper">
        <div class="items">
          {% for block in section.blocks %}
              <div class="item"><img src="{{ block.settings.featured_image | img_url }}" alt="" loading="lazy"></div>
          {% endfor %}
        </div>
    </div>

    <style>
      @-webkit-keyframes ticker {
        0% {
          transform: translate3d(25%, 0, 0);
        }
        100% {
          transform: translate3d(-25%, 0, 0);
        }
      }
      @keyframes ticker {
        0% {
          transform: translate3d(25%, 0, 0);
        }
        100% {
          transform: translate3d(-25%, 0, 0);
        }
      }
      section {
        text-align: center;
        position: relative;
        z-index: 1;
        background-color: #2C2C30;
      }
      section .items-wrapper {
        width: 100vw;
        min-height: 100vh;
        display: -webkit- flex;
        /* Safari */
        display: flex;
        /* Safari */
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        overflow: hidden;
      }
      section .items-wrapper .items {
        width: 400vw;
        display: -webkit- flex;
        /* Safari */
        display: flex;
        /* Safari */
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-around;
        transform: translate3d(25%, 0, 0);
        white-space: nowrap;
        -webkit-animation-iteration-count: infinite;
                animation-iteration-count: infinite;
        -webkit-animation-timing-function: linear;
                animation-timing-function: linear;
        -webkit-animation-name: ticker;
                animation-name: ticker;
        -webkit-animation-duration: 30s;
                animation-duration: 30s;
      }
      section .items-wrapper .items:hover {
        -webkit-animation-play-state: paused;
                animation-play-state: paused;
      }
      section .items-wrapper .items:nth-child(even) {
        animation-direction: reverse;
      }
    </style>

    {% comment %} <div class="partners-wrapper">
      <div class="ticker-wrap">
        <div class="ticker-col">
          {% for block in section.blocks %}
            <div class="partner-col">
              <div class="partner-item">
                <img src="{{ block.settings.featured_image | img_url }}" alt="" loading="lazy">
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div> {% endcomment %}
  </div>
</section>

<style>
  {% if section.settings.is_remove_padding_top %}
    #featured-section {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.is_remove_padding_bottom %}
    #featured-section {
      padding-bottom: 0;
    }
  {% endif %}

  #featured-section {
    border-bottom: 1px solid {{ section.settings.bg_color_bottom }};
    background-color: {{ section.settings.bg_color }};
  }

  #featured-section h4 {
    font-size: 24px;
    opacity: .6;
    text-align: center;
    font-weight: 300;
    margin-bottom: 30px;
  }

  #featured-section .partners-wrapper {
    display: flex;
    overflow: hidden;
    align-items: center;
    width: 100%; /* Ensure full width */
  }

  #featured-section .partners-wrapper .partner-col {
    flex-shrink: 0;
    width: 150px;
    margin-right: 30px; /* Adjust spacing between items */
  }

  #featured-section .partners-wrapper .ticker-col {
    display: flex;
    animation: ticker infinite 20s linear; /* Adjust duration as needed */
    width: fit-content; /* Adjust to fit the content width */
  }

  #featured-section .partners-wrapper .partner-item {
    opacity: .6;
    min-height: 60px;
    display: flex;
    align-items: center;
  }

  @keyframes ticker {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @media screen and (max-width: 768px) {
    #featured-section .partners-wrapper .partner-col {
      width: 20vw;
    }

    #featured-section h4 {
      margin: 5vw 0;
    }
  }
</style>
{% comment %}
 <script>
  let brandsTicker = new Swiper('#featured-section .swiper', {
    spaceBetween: 30,
    speed: 6000,
    autoplay: {
      delay: 0
    },
    loop: true,
    slidesPerView:'auto',
    allowTouchMove: false,
    disableOnInteraction: true
    });
</script> {% endcomment %}
{% schema %}
{
  "name": "As Featured On",
  "tag": "section",
  "class": "featured no-padding",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "bg_color_bottom",
      "label": "Background Bottom Color",
      "default": "#DCD9D9"
    },
    {
      "type": "color_background",
      "id": "ticker_background_before",
      "label": "Ticker Background Before",
      "default": "linear-gradient(90deg, #F7F7F7 0%, rgba(255, 255, 255, .76) 49.3%, rgba(255, 255, 255, 0) 100%)"
    },
    {
      "type": "color_background",
      "id": "ticker_background_after",
      "label": "Ticker Background After",
      "default": "linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, .76) 49.3%, #F7F7F7 100%)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "As Featured On"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_top",
      "label": "Remove Top Padding"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_bottom",
      "label": "Remove Bottom Padding"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "featured_image",
          "label": "Featured Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "As Featured On"
    }
  ]
}
{% endschema %}