                <a href="#profile" class="nav-link">
                  <i class="fa-thin fa-user"></i>
                  <span>My Profile</span>
                </a>
              </li>

              <li class="nav-item">
                <a href="#orders" class="nav-link">
                  <i class="fa-thin fa-credit-card"></i>
                  <span>Orders</span>
                </a>
              </li>

