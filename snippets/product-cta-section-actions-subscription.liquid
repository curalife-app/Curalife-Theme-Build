<div class="product-actions">
  {% assign variantQuantity = product.variants | size %}
  {% if variantQuantity > 1 %}
    <div class="cta-title">{{ title }}</div>
  {% endif %}

  <div class="purchase-options">
    <div class="variant-box">
      <div class="left-side-wrapper">
        <div class="radio-box">
          <input type="radio" name="pack"></input>
        </div>

        <div class="variant-info">
          <div class="variant-title">Subscribe & <span>save 25%</span></div>
          <div class="subtitle">Every 4th order FREE = 25% off</div>
        </div>
      </div>

      <div class="price">
        <div class="calculations">
          {% if original_item_cap_total > var.price %}
            <p class="compared-at-price"><strike class="no-letters rounded">{{ 75 | money_without_trailing_zeros }}</strike></p>
          {% endif %}

          <p class="real-price no-letters rounded">{{ 56 | money_without_trailing_zeros }}</p>
        </div>

        <p class="per-month">Per Month</p>
      </div>
    </div>

    <div class="variant-box">
      <div class="left-side-wrapper">
        <div class="radio-box">
          <input type="radio" name="pack" value="{{ var.id }}" data-quantity="{{ var.metafields.my_fields.pack_bottles_quantity }}" data-price="{{ var.price | money_without_currency | replace: ".00", "" }}" data-title="{{ var.title }}" data-sku="{{ var.sku }}" data-save="{{ save_price }}" data-index="{{ product.variants.size | minus: index | plus: 1 }}"></input>
        </div>

        <div class="variant-info">
          <div class="variant-title">Buy once</span></div>
          <div class="variant-subtitle">One time delivery</div>
        </div>
      </div>

      <div class="price">
        <div class="calculations">
          {% if original_item_cap_total > var.price %}
            <p class="compared-at-price"><strike class="no-letters rounded">{{ 75 | money_without_trailing_zeros }}</strike></p>
          {% endif %}

          <p class="real-price no-letters rounded">{{ 56 | money_without_trailing_zeros }}</p>
        </div>

        <p class="per-month">Per {{ pricePer | capitalize }}</p>
      </div>
    </div>

    {% comment %} <input type="radio" id="add-to-cart-button" value="1 Month Subscription Plan" onClick="addItemToCart(42865141121175, 1, {{product.selling_plan_groups[0].selling_plans[0].id}})"> {% endcomment %}
  </div>

  <script>
      function addItemToCart(variant_id, qty, selling_plan) {

        data = {
          "id": variant_id,
          "quantity": qty,
          "selling_plan": selling_plan
        }

        console.log(data);

        jQuery.ajax({
          type: 'POST',
          url: '/cart/add.js',
          data: data,
          dataType: 'json',
          success: function() {
            console.log('success');
            window.location.href = '/cart';
          }
        });
      }
    </script>

  {% if variantQuantity > 1 %}
    <div class="variants">
      {% for var in product.variants %}
        {% assign bottle_quantity = var.metafields.my_fields.pack_bottles_quantity %}
        {% assign original_item_cap_total = original_item_cap | times: bottle_quantity %}
        {% assign item_price = var.price | divided_by: bottle_quantity %}
        {% assign save_price = original_item_price | minus: item_price | times: quantity %}

        <div class="pack-option">
          <div class="thumbnail">
            <img src="{{ var.product.metafields.custom.bottle_image | image_url }}" alt="{{ var.title }}">
            <div class="multiplier">X{{ bottle_quantity }}</div>
          </div>
          <div class="price">{{ var.price | money_without_trailing_zeros }}</div>
          <p class="compared-at-price"><strike class="no-letters rounded">{{ original_item_cap_total | money_without_trailing_zeros }}</strike></p>
          <div class="title">{{ var.title }}</div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  <div class="submit-wrap flex flex-col">
    <button class="main-btn" id="buy-button"><span>{% if isRetention %}START CHECKOUT{% else %}SHOP NOW{% endif %}</span>{% if ctaTextType %}<span class="save" id="save"></span>{% endif %}</button>
  </div>
</div>

{% render 'script.round-converted-currency' %}

<style>
  .product-actions {
    grid-area: 2/2/3/3;
    max-width: 450px;
  }

  .product-actions .cta-title {
    padding: 10px 0;
  }

  .product-actions .variants {
    display: flex;
    flex-direction: {% if isReversed %}column-reverse{% else %}column{% endif %};
  }

  .product-actions .submit-wrap {
    display: flex;
  }

  .product-actions .submit-wrap button {
    background-color: {{ ctaColor }};
    width: 100%;
    display: flex;
    align-items: center;
  }

  .product-actions .submit-wrap:hover {
    border-color: #ea9f1c;
  }

  .product-actions .submit-wrap:hover button {
    background-color: #ea9f1c;
  }

  {% unless isRetention %}
    .product-actions .submit-wrap button span {
      width: 50%;
    }
  {% endunless %}

  .product-actions .submit-wrap button span.save {
    font-weight: 100;
    border-left: 1px solid white;
    {% if isRetention %}padding-left: 10px;{% endif %}
  }

  .product-actions .submit-wrap .qty-data .qty-control {
    border: 0;
    background: white;
  }

  @media screen and (max-width: 768px) {
    .product-actions {
      grid-area: unset;
      grid-row: 3;
      max-width: unset
    }

    .product-actions .submit-wrap button span:first-child {
      font-size: 4vw;
    }

    .submit-wrap .qty-data .qty-control {
      border: 1px solid #ffb22d
    }

    .product-actions .submit-wrap button {
      min-height: 15vw;
    }
  }
</style>

<script>
  $(document).ready(function() {
    let urlParams = new URLSearchParams(window.location.search);
    let defaultVariant = urlParams.get('default-variant');

    if (defaultVariant) {
      $(".variant-box").eq(defaultVariant - 1).trigger("click");
    }
    else {
      $(".variant-box").{% if product.variants.size == 1 or request.path contains 'prime' %}first(){% elsif defaultSelectionIndex %}eq({{ defaultSelectionIndex | minus: 1 }}){% else %}first(){% endif %}.trigger( "click" );
    }
  });

  // On Quantity Change
  $(document).on("click", ".submit-wrap .qty-control a", function (e) {
    e.preventDefault();
    let newVal, $button = $(this),
      inputObj = $button.closest(".qty-control").find("input"),
      oldValue = inputObj.val();
    if ($button.attr('data-act') === "+") {
      newVal = parseInt(oldValue) + 1;
    }
    else {
      newVal = parseInt(oldValue) - 1;
    }

    inputObj.val(newVal);
  });

  // On Buy Button Click
  $(document).on("click", "#buy-button", function () {
    let checkedPack = $('input[name=pack]:checked').val();
    let checkedQuantity = 1;
    let checkoutLink = "https://" + location.hostname + "/cart/" + checkedPack + ":" + checkedQuantity;
    window.location.href = checkoutLink;

    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: 'add_to_cart',
      ecommerce: {
      items: [{
        item_name: '{{ product.title }}',
        item_id: $('input[name=pack]:checked').attr('data_sku'),
        affiliation: '{{ shop.name }}',
        price: $('input[name=pack]:checked').attr('data_price'),
        currency: '{{ shop.currency }}',
        item_brand: 'CuraLife',
        item_category: 'CuraLin',
        quantity: $(".qty-control input").length ? parseInt($(".qty-control input").val()) : 1
      }]
      },
      email: '{{ customer.email }}',
      phone: '{{ customer.phone }}',
      name: '{{ customer.first_name }}',
      surname: '{{ customer.last_name }}',
      city: '{{ customer.customer_address.city }}',
      state: '{{ customer.customer_address.province }}',
      zip: '{{ customer.customer_address.zip }}',
      country: '{{customer.customer_address.country_code | t}}',
      user_agent: navigator.userAgent
    });

    woopra.track('add to cart', {
      product_sku: $('input[name=pack]:checked').attr('data_sku'),
      product_name: '{{ product.title }}',
      product_price: $('input[name=pack]:checked').attr('data_price'),
      currency: '{{ shop.currency }}',
      quantity: parseInt($(".qty-control input").val())
    });
  });
</script>