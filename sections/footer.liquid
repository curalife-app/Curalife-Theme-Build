{% unless section.settings.hide_on_affiliate_pages and request.path contains '-aff' %}
  <footer>
    <div class="top-info">
      <div class="container">
        <div class="info-wrap">
          <div class="main-side footer-column">
            <a href="/"><img class="logo invert" src="{{ 'logo-new.svg' | asset_url }}" alt="curalife logo" width="134" height="32" loading="lazy"></a>
            <div class="social-links flex gap-4 text-[24px] mt-4">
              {% for block in section.blocks %}
                {% if block.type == 'social' %}
                  <a href="{{ block.settings.social_link }}" target="_blank"><i class="{{ block.settings.social_icon_class }}"></i></a>
                {% endif %}
              {% endfor %}
            </div>
        </div>

          <div class="right-column footer-column">
            <div class="menu-list">
              {% for block in section.blocks %}
                {% if block.type == 'menu' %}
                  <div class="menu-wrapper">
                    <div class="h6">{{ block.settings.menu_title }}</div>
                    {% assign footer_linklist = block.settings.footer_linklist %}
                    {% if linklists[footer_linklist].links.size > 0 %}
                      <div class="menu">
                        {% for link in linklists[footer_linklist].links %}
                          <div class="item"><a href="{{ link.url }}"{% if link.url contains 'professionals' or link.url contains 'retail' %} rel="nofollow"{% endif %}>{{ link.title }}</a></div>
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>

        <div class="pre-bottom-text">{{ section.settings.disclaimer }}</div>
      </div>
    </div>

    <div class="bottom-info">
      <div class="container">
        <div class="info-wrap">
          <div class="text"><p class="copy-write">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</p> </div>

          <div class="payment-methods">
            <div class="payments">
              {% for block in section.blocks %}
                {% if block.type == 'payment' %}
                  {% if block.settings.payment_img != blank %}
                    <div class="payment"><span><img src="{{ block.settings.payment_img | img_url: '' }}" width="51px" height="32px" alt=""></span></div>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <p class="rights-reserved">All Rights Reserved</p>
        </div>
      </div>
    </div>
  </footer>
{% endunless %}

{% schema %}
{
  "name": "Footer",
  "class": "footer_section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "titles_color",
      "label": "Titles Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "logo_img",
      "label": "Logo image"
    },
    {
      "type": "header",
      "content": "Bottom Menu"
    },
    {
      "type": "text",
      "id": "bottom_menu_title",
      "label": "Bottom Menu Title"
    },
    {
      "type": "link_list",
      "id": "bottom_linklist",
      "label": "Bottom Menu"
    },
    {
      "type": "richtext",
      "id": "disclaimer",
      "label": "Disclaimer"
    },
    {
      "type": "checkbox",
      "id": "hide_on_affiliate_pages",
      "label": "Hide on affiliate pages"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "footer_linklist",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact Numbers",
        "settings": [
          {
            "type": "image_picker",
            "id": "flag_img",
            "label": "Country Flag Image"
          },
          {
            "type": "text",
            "id": "phone_title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "phone_number",
            "label": "Phone Number"
          }
        ]
      },
      {
        "type": "social",
        "name": "Social Media",
        "settings": [
          {
            "type": "text",
            "id": "social_icon_class",
            "label": "Social Icon Class"
          },
          {
            "id": "social_link",
            "type": "url",
            "label": "Social Icon Link"
          }
        ]
      },
      {
      "type": "payment",
      "name": "Payment Images",
      "settings": [
        {
          "type": "image_picker",
          "id": "payment_img",
          "label": "Select Payment Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}