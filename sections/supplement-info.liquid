<section class="supplement-info">
  <div class="container">
    <div class="tabs">
      <div class="tab active">Overview <i class="fa-light fa-angle-right"></i></div>
      <div class="tab">Ingredients <i class="fa-light fa-angle-right"></i></div>
      <div class="tab">FAQ <i class="fa-light fa-angle-right"></i></div>
    </div>

    <div class="content-wrapper">
      <div class="content overview active">
        <div class="overview-wrapper dsk:w-[60%">

          <div class="supplement-wrapper mbl:flex-col flex gap-8 pb-8">
            <div class="supplement-info dsk:w-1/2 flex flex-col gap-4">
              <h5 class="title text-[--blue]">Curalin</h5>
              <div class="subtitle text-[--blue] font-bold">Say goodbye to frustration and hello to a healthy, natural way to support healthy glucose levels.</div>
              <div class="description">Curalin stands out as a leader in natural blood sugar support, renowned for its effective clinically proven approach to maintaining blood sugar levels within the normal range.*</div>
            </div>

            <div class="supplement-benefits dsk:w-1/2">
              <ul>
                <li>Support and Maintain Healthy Blood Glucose Levels*</li>
                <li>Boost Daily Energy and Reduce Fatigue*</li>
                <li>Blending ancient Ayurveda practteices with modern science and technology.</li>
                <li>Assist in Achieving Balanced Dietary Goals*</li>
              </ul>
            </div>
          </div>

          <div class="notice pt-4 border-t border-[--blue]">Take on each day with confidence, powered by Curalinâ€™s natural blend designed for those who demand excellence from their supplements.</div>
        </div>

        {% render 'responsive-image', img: section.settings.overview_image, img_mobile: section.settings.overview_image_mobile %}
        {% comment %} <picture>
          {% if section.settings.overview_image_mobile %}
            <source media="(max-width: 768px)" srcset="{{ section.settings.overview_image_mobile | image_url }}" width="{{ section.settings.overview_image_mobile.width }}" height="{{ section.settings.overview_image_mobile.height }}">
          {% endif %}
          <img class="" src="{{ section.settings.overview_image | default: section.settings.overview_image_mobile | image_url }}" alt="{{ section.settings.overview_image.alt }}" width="{{ section.settings.overview_image.width | default: section.settings.overview_image_mobile.width }}" height="{{ section.settings.overview_image.height | default: section.settings.overview_image_mobile.height }}" loading="lazy">
        </picture>
        <img src="{{ section.settings.overview_image | img_url: 'master' }}" alt="Overview" class="overview-image dsk:absolute dsk:top-[-30px] dsk:right-[-80px] mbl:relative mbl:top-[50px] desktop" loading="lazy">
        <img src="{{ section.settings.overview_image_mobile | img_url: 'master' }}" alt="Overview" class="overview-image dsk:absolute dsk:top-[-30px] dsk:right-[-80px] mbl:relative mbl:top-[50px] mobile" loading="lazy"> {% endcomment %}
      </div>

      <div class="content ingredients">
        <img src="{{ section.settings.ingredients_image | img_url: 'master' }}" alt="Ingredients" class="ingredients-image" loading="lazy">
      </div>

      <div class="content faq">
        {% render 'product-faq-section',
          bgColor: section.settings.bg_color,
          titles_color: section.settings.titles_color,
          title: section.settings.title,
          main_image: section.settings.main_image,
          is_ingredients_feature: section.settings.is_ingredients_feature,
          is_allow_one_open: section.settings.is_allow_one_open,
          data_type: "json",
          faqItems: product.metafields.custom.faq.value
        %}
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    $('.supplement-info .tab').click(function() {
      $('.supplement-info .tab').removeClass('active');
      $(this).addClass('active');

      $('.supplement-info .content').removeClass('active');
      $('.supplement-info .content').eq($(this).index()).addClass('active');
    });
  });
</script>

<style>
  .supplement-info {
    .tabs {
      display: flex;
      gap: 2rem;
      margin-bottom: 2rem;

      .tab {
        text-align: center;
        padding: 1rem;
        background-color: var(--light-blue);
        width: 250px;
        border-radius: 30px;
        transition: background-color 0.3s ease-in-out;

        &.active,
        &:hover {
          cursor: pointer;
          background-color: var(--blue);
          color: white;
          font-weight: bold;
        }
      }
    }

    .content-wrapper {
      .content {
        display: none;
        position: relative;

        &.active {
          display: block;
        }

        &.overview {
          .supplement-wrapper {
            .supplement-benefits {
              ul {
                li {
                  color: var(--bronze);
                  font-weight: bold;

                  &:before {
                    background: var(--bronze);
                  }
                }
              }
            }
          }
        }
      }
    }
  }
</style>

{% schema %}
  {
      "name": "Supplement Info",
      "settings": [
        {
          "type": "image_picker",
          "id": "overview_image",
          "label": "Overview Image"
        },
        {
          "type": "image_picker",
          "id": "ingredients_image",
          "label": "Ingredients Image"
        },
        {
          "type": "image_picker",
          "id": "ingredients_image_mobile",
          "label": "Ingredients Image Mobile"
        }
      ],
      "presets": [
      {
          "name": "Supplement Info"
      }
    ]
  }
{% endschema %}