<!-- Shopify Liquid Code for Modern Cart Component -->
<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

<style>
	/* Cart Container */
	.cart-container {
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0 1rem;
	}

	/* Cart Header */
	.cart-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.cart-header h1 {
		font-size: 1.5rem;
		font-weight: 600;
	}

	.continue-shopping-link {
		color: #000;
		text-decoration: none;
	}

	/* Cart Items */
	.cart-items-wrapper {
		margin-bottom: 2rem;
	}

	.cart-item {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 1.5rem;
		padding: 1rem;
		border-bottom: 1px solid #e5e5e5;
	}

	.cart-item-image img {
		width: 100px;
		height: 100px;
		object-fit: cover;
	}

	.cart-item-details {
		display: flex;
		flex-direction: column;
	}

	.product-title {
		color: #000;
		text-decoration: none;
		font-weight: 500;
		margin-bottom: 0.5rem;
	}

	/* Quantity Controls */
	.quantity-wrapper {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin: 1rem 0;
	}

	.quantity-input {
		width: 50px;
		text-align: center;
		padding: 0.25rem;
	}

	.quantity-button {
		padding: 0.25rem 0.5rem;
		background: #f3f4f6;
		border: none;
		cursor: pointer;
	}

	/* Price Display */
	.price-display {
		margin: 0.5rem 0;
	}

	.original-price {
		text-decoration: line-through;
		color: #6b7280;
		margin-right: 0.5rem;
	}

	/* Cart Summary */
	.cart-summary {
		background: #f9fafb;
		padding: 1.5rem;
		border-radius: 0.5rem;
	}

	.summary-header h2 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
	}

	.summary-details p {
		display: flex;
		justify-content: space-between;
		margin-bottom: 0.5rem;
	}

	.update-cart {
		width: 100%;
		padding: 0.75rem;
		background: #f3f4f6;
		border: none;
		margin: 1rem 0;
		cursor: pointer;
	}

	.checkout-button {
		display: block;
		width: 100%;
		padding: 0.75rem;
		background: #000;
		color: white;
		text-align: center;
		text-decoration: none;
		border-radius: 0.25rem;
	}

	/* Empty Cart */
	.cart-empty {
		text-align: center;
		padding: 3rem 1rem;
	}

	.cart-empty .button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: #000;
		color: white;
		text-decoration: none;
		margin-top: 1rem;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.cart-header {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.cart-item {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.cart-item-image img {
			margin: 0 auto;
		}
	}
</style>

<div class="cart-container"></div>
	<cart-items class="container{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}">
		<div class="cart-header"></div>
			<h1>Your Shopping Cart ({{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}items{% endif %})</h1>
			<a href="{{ routes.all_products_collection_url }}" class="continue-shopping-link"></a>
				Continue Shopping
			</a>
		</div>

		{% if cart == empty %}
			<div class="cart-empty">
				<div class="empty-cart-icon">{% render 'icon-cart' %}</div>
				<h2>Your cart is currently empty</h2>
				<p>Looks like you haven't added anything yet.</p>
				<a href="{{ routes.all_products_collection_url }}" class="button">Start Shopping</a>
			</div>
		{% else %}
			<form action="{{ routes.cart_url }}" method="post" id="cart"></form>
				<div class="cart-main">
					<div class="cart-items-wrapper">
						{% for item in cart.items %}
							<div class="cart-item" id="CartItem-{{ item.index | plus: 1 }}">
								<div class="cart-item-image">
									{% if item.image %}
										<a href="{{ item.url }}">
											<img src="{{ item.image | image_url: width: 150 }}"
													 alt="{{ item.image.alt | escape }}"
													 loading="lazy"
													 width="150"
													 height="150">
										</a>
									{% endif %}
								</div>

								<div class="cart-item-details"></div>
									<div class="cart-item-header">
										<a href="{{ item.url }}" class="product-title">{{ item.product.title | escape }}</a>
										<div class="price-quantity">
											<div class="quantity-wrapper">
												<button type="button" class="quantity-button" data-action="decrease">-</button>
												<input type="number"
															 name="updates[]"
															 value="{{ item.quantity }}"
															 min="0"
															 data-index="{{ forloop.index }}"
															 id="Quantity-{{ item.index | plus: 1 }}"
															 class="quantity-input">
												<button type="button" class="quantity-button" data-action="increase">+</button>
											</div>
											<div class="price-display">
												{% if item.original_price != item.final_price %}
													<span class="original-price">{{ item.original_price | money }}</span>
													<span class="final-price">{{ item.final_price | money }}</span>
												{% else %}
													<span class="regular-price">{{ item.final_price | money }}</span>
												{% endif %}
											</div>
										</div>
									</div>

									{% if item.options_with_values.size > 0 %}
										<ul class="product-options">
											{% for option in item.options_with_values %}
												<li>{{ option.name }}: <span>{{ option.value }}</span></li>
											{% endfor %}
										</ul>
									{% endif %}

									<div class="cart-item-footer">
										<span class="item-total">{{ item.final_line_price | money }}</span>
										<button type="button"
														class="remove-button"
														aria-label="Remove {{ item.title }}"
														data-item-id="{{ item.id }}">
											Remove
										</button>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>

					<div class="cart-summary">
						<div class="summary-header">
							<h2>Order Summary</h2>
						</div>

						<div class="summary-details">
							<p class="subtotal"></p>
								<span>Subtotal</span>
								<span>{{ cart.total_price | money }}</span>
							</p>

							{% if cart.total_discount > 0 %}
								<p class="savings">
									<span>Total Savings</span>
									<span>-{{ cart.total_discount | money }}</span>
								</p>
							{% endif %}

							<div class="shipping-calculator">
								{% if cart.total_price < settings.free_shipping_threshold %}
									{% assign remaining_amount = settings.free_shipping_threshold | minus: cart.total_price %}
									<p class="shipping-message">
										Add {{ remaining_amount | money }} more for free shipping!
										<div class="shipping-progress-bar"></div>
											<div class="progress" style="width: {{ cart.total_price | divided_by: settings.free_shipping_threshold | times: 100 }}%"></div>
										</div>
									</p>
								{% else %}
									<p class="free-shipping-message">âœ“ You qualify for free shipping!</p>
								{% endif %}
							</div>

							<button type="submit" name="update" class="update-cart" form="cart">Update Cart</button>
							<a href="{{ routes.checkout_url }}" class="checkout-button">
								Proceed to Checkout
								<span class="total-amount">{{ cart.total_price | money }}</span>
							</a>
						</div>
					</div>
				</div>
			</form>
		{% endif %}
	</cart-items>
</div>

{% schema %}
{
  "name": "Cart Items",
  "settings": []
}
{% endschema %}