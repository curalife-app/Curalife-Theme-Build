<div class="article-card relative">
  {% if customer.email == 'yotam@curalife.com' %}
    <a href="https://admin.shopify.com/store/curalife-commerce/articles/{{ article.id }}" class="admin-edit-link" target="_blank"><i class="fa-thin fa-edit"></i></a>
  {% endif %}

  <div class="picture">
    <a href="{{ article.url }}" class="main-link"></a>
    {% if article.image %}
      <img src="{{ article.image | image_url: height: 275 }}" width="331" height="275" alt="" loading="lazy">
    {% else %}
      <img src="{{ 'meta-thumbnail.png' | asset_url }}" width="331" height="275" alt="" loading="lazy">
    {% endif %}
  </div>

  <div class="info">
    <div class="main-info">
      <div class="title">
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
      </div>

      {% if description %}
        <div class="description">
          <p>
            {% if article.excerpt.size > 0 %}
              {{ article.excerpt }}
              {% else %}
              {{ article.content | strip_html | truncate: 150 }}
            {% endif %}
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>