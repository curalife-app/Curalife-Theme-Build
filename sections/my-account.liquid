<script>
	document.addEventListener("DOMContentLoaded", function () {
		const mainContent = document.querySelector('.main-content');
		const mobileDropdown = document.getElementById('mobile-dropdown');

		if (!mainContent) {
			console.error("mainContent element is not found");
			return;
		}

		function setActiveTab(targetLink) {
			const tabs = document.querySelector('#tabs');
			const tabLinks = Array.from(tabs.querySelectorAll('.menu-items .menu-item a'));
			const allPanels = Array.from(tabs.querySelectorAll('.main-content .content-panel'));

			const href = (targetLink && targetLink.getAttribute('href')) ? targetLink.getAttribute('href').substr(1) : null;
			const tabPane = href ? document.getElementById(href) : null;

			allPanels.forEach(panel => {
				panel.classList.remove("active");
			});

			tabLinks.forEach(link => {
				link.classList.remove("active");
				link.parentElement.classList.remove("active");
			});

			if (tabPane) {
				tabPane.classList.add("active");
				targetLink.classList.add("active");
				targetLink.parentElement.classList.add("active");
			}
		}

		const tabs = document.querySelector('#tabs');
		const tabLinks = Array.from(tabs.querySelectorAll('.menu-items .menu-item a'));

		// Check for query parameter indicating tab activation
		const urlParams = new URLSearchParams(window.location.search);
		const contactUpdated = urlParams.get('contact-updated') === 'true';
		const passwordUpdated = urlParams.get('password-updated') === 'true';

		// Check if we need to activate the My Information tab
		if (contactUpdated || passwordUpdated) {
			// Find the My Information tab and activate it
			const infoTab = tabLinks.find(link => link.getAttribute('href') === '#a');
			if (infoTab) {
				setActiveTab(infoTab);
			}

			// Force a page reload when coming back from a successful form submission
			// This ensures the customer data displayed is refreshed
			if (!sessionStorage.getItem('account_info_refreshed')) {
				sessionStorage.setItem('account_info_refreshed', 'true');
				// Reload the page once to refresh customer data
				window.location.reload();
				return;
			}

			// Clear the flag on subsequent page views
			sessionStorage.removeItem('account_info_refreshed');
		} else if (tabLinks.length > 0) {
			// Default behavior - activate first tab
			setActiveTab(tabLinks[0]);
		}

		tabLinks.forEach(link => {
			if (link.getAttribute('href').startsWith('#')) {
				link.addEventListener('click', function (e) {
					e.preventDefault();
					setActiveTab(this);
				});
			}
		});

		// Handle mobile dropdown navigation
		if (mobileDropdown) {
			mobileDropdown.addEventListener('change', function() {
				const selectedValue = this.value;
				if (selectedValue.charAt(0) === '#') {
					const targetLink = document.querySelector(`.menu-items .menu-item a[href="${selectedValue}"]`);
					if (targetLink) {
						setActiveTab(targetLink);
					}
				} else {
					window.location.href = selectedValue;
				}
			});
		}
	});
</script>

