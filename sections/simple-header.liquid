<header class="simple-header">
  <div class="main-container container">
    <div class="header-content flex items-center justify-between p-4">
      <!-- Logo -->
      <div class="header__logo">
        <img class="max-h-[50px]" src="{{ section.settings.logo_img | image_url }}" alt="{{ shop.name }}">
      </div>

      <!-- Mobile Menu Icon -->
      <div class="menu-icon" onclick="toggleMenu()">
        <i class="fa-light fa-bars"></i>
      </div>

      <!-- Navigation Links -->
      <div class="header-links flex items-center gap-8">
        {% for block in section.blocks %}
          <a {% if block.settings.is_button_style %}class="link-button"{% endif %} href="{{ block.settings.link_url }}" {% if block.settings.link_new_tab %}target="_blank"{% endif %}>
            {{ block.settings.link_title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</header>

{% comment %} <header class="simple-header">
  <div class="main-container container">
    <div class="header-content flex items-center justify-between p-4">
      <div class="header__logo">
        <img class="max-h-[50px]" src="{{ section.settings.logo_img | image_url }}" alt="{{ shop.name }}">
      </div>

      <div class="header-links flex items-center gap-8">
        {% for block in section.blocks %}
          <a {% if block.settings.is_button_style %}class="link-button"{% endif %} href="{{ block.settings.link_url }}" {% if block.settings.link_new_tab %}target="_blank"{% endif %}>{{ block.settings.link_title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</header> {% endcomment %}

<script>
  function toggleMenu() {
    document.querySelector('.header-links').classList.toggle('mobile-visible');
  }
</script>

<style>
  /* Original Styles */
  header.simple-header {
    background-color: var(--bg-color); /* Assuming you have a CSS variable for bg-color */
    color: var(--text-color); /* Assuming you have a CSS variable for text-color */
  }

  header.simple-header .header-links a.link-button {
    background-color: var(--orange);
    color: black;
    border-radius: 30px;
    padding: 0.5rem 1rem;
  }

  /* Responsive Styles for Mobile */
  @media (max-width: 768px) {
    .header__logo img {
      max-height: 40px; /* Smaller logo for mobile */
    }

    .header-links {
      display: none; /* Hide links and replace with a menu icon */
    }

    .header-links.mobile-visible {
      display: flex; /* Show when menu is toggled */
      flex-direction: column; /* Stack links vertically */
      align-items: start; /* Align links to the start */
      padding: 1rem; /* Add some padding */
    }

    .header-links a {
      font-size: 0.8rem; /* Smaller text for links */
      padding: 0.4rem 0.8rem; /* Adjust button padding */
    }

    .menu-icon {
      display: block; /* Show menu icon on mobile */
      cursor: pointer;
    }
  }

  /* Styles for Menu Icon (Hamburger Icon) */
  .menu-icon {
    display: none; /* Hidden on larger screens */
    color: white;
  }
</style>

