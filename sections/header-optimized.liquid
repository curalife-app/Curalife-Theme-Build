  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 140,
      "unit": "px",
      "label": "Logo width"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Top Bar Links"
    },
    {
      "type": "url",
      "id": "wholesale_link",
      "label": "Wholesale Page Link"
    },
    {
      "type": "url",
      "id": "store_locator_link",
      "label": "Store Locator Link"
    },
    {
      "type": "url",
      "id": "help_link",
      "label": "Help Page Link"
    }
  ]
}
{% endschema %}