{% assign variantQuantity = product.variants | size %}

{%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}

<!-- HTML Structure -->
<div id="product-thumbnails-{{ section.id }}" class="product-thumbnails">
  <div class="product-slider">
    <div class="sliders-group">
      {% unless isHideThumbs %}
        <div class="thumbs-slider">
          <div id="product-thumbs-slider-nav-prev-{{ section.id }}" class="swiper-nav swiper-button-prev"></div>

          <div id="thumbs-slider-{{ section.id }}" class="swiper">
            <div class="swiper-wrapper">
              <!-- Render Product Images on Thumbs Slider -->
              {% for img in product.images %}
                <div class="swiper-slide">
                  <img src="{{ img | image_url }}" alt="{{ img.alt | escape }}" loading="lazy">
                </div>
              {% endfor %}

              <!-- Render Section Images on Thumbs Slider -->
              {% for block in blocks %}
                {% if block.type == 'image' %}
                  <div class="swiper-slide">
                    <img src="{{ block.settings.product_img | image_url }}" alt="Product Image" loading="lazy">
                  </div>
                {% elsif block.type == 'video' %}
                  <div class="swiper-slide">
                    <div class="thumbs-img video-thumbnail">
                      <img src="{{ block.settings.video_thumbnail | image_url }}" alt="" loading="lazy">
                    </div>
                  </div>
                {% endif %}
              {% endfor %}

              {% if first_3d_model %}
                <div class="swiper-slide">
                  <img src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/single_supp.png?v=1704621391" alt="Product Image" loading="lazy">
                  <i class="fa-light fa-360-degrees model-icon"></i>
                </div>
              {% endif %}
            </div>
          </div>

          <div id="product-thumbs-slider-nav-next-{{ section.id }}" class="swiper-nav swiper-button-next"></div>
        </div>
      {% endunless %}

      <div class="main-slider">
        <div id="product-main-slider-sc-{{ section.id }}" class="swiper">
          <div class="swiper-wrapper">
            {% if thumbnailImage %}
              <div class="swiper-slide product-image-slide">
                {% render 'responsive-image', img: thumbnailImage, img_mobile: thumbnailImageMobile, classes: "", is_dont_lazyload: false %}
              </div>
              <style>
                #product-main-slider-sc-{{ section.id }} .swiper-nav {
                  display: none !important;
                }
              </style>
            {% else %}
              <!-- Render Product Images on Main Slider -->
              {% for img in product.images %}
                {% if forloop.index == 1 %}
                  {% assign currentImg = img %}
                  {% assign img = thumbnailImage | default: currentImg %}
                {% endif %}
                <div class="swiper-slide product-image-slide">
                  <img src="{{ img | image_url }}" alt="{{ img.alt | escape }}">
                </div>
              {% endfor %}

              {% if badgeImage %}
                <img src="{{ badgeImage | image_url }}" alt="Curalin" class="sale-badge" loading="lazy">
              {% endif %}

              <!-- Render Section Images on Main Slider -->
              {% for block in blocks %}
                {% if block.type == 'image' %}
                  <div class="swiper-slide image-block-slide">
                    <img src="{{ block.settings.product_img | image_url }}" alt="Product Image" loading="lazy">
                  </div>
                {% elsif block.type == 'video' %}
                  <div class="swiper-slide video-block-slide">
                    <div class="product-video">
                      <iframe id="product-video-iframe" src="https://player.vimeo.com/video/{{ block.settings.vimeo_video_id }}?playsinline=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen loading="lazy"></iframe>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}

              {% if first_3d_model %}
                <div class="swiper-slide model-slide">
                  <model-viewer alt="Curalin" src="{{ first_3d_model.sources.first.url }}" poster="//curalife.com/cdn/shop/files/curalinsdsdv.png?v=1704651801" shadow-intensity="1" camera-controls camera-orbit="300deg 80deg" auto-rotate></model-viewer>
                </div>
              {% endif %}

              <!-- Render Variants on Main Slider -->
              {% if product.variants.size > 1 %}
                {% for var in product.variants %}
                  <div class="swiper-slide variant-image-slide">
                    {% if var.image %}
                      <img src="{{ var.image | image_url }}" alt="{{ var.image.alt | escape }}">
                    {% endif %}

                    {% if isSaveTitle %}
                      {% assign save_price = var.compare_at_price | minus: var.price %}
                      <div class="save-title">
                        <p>SAVE {{ save_price | money_without_trailing_zeros }}</p>
                      </div>
                    {% endif %}

                    {% if badgeImage %}
                      <img src="{{ badgeImage | image_url }}" alt="Curalin" class="sale-badge" loading="lazy">
                    {% endif %}
                  </div>
                {% endfor %}
              {% endif %}

              {% if customer.email == 'ana@curalife.com' or customer.email == 'yotam@curalife.com' %}
                {% for additionalVariant in product.metafields.custom.additional_variants.value %}
                  <div class="swiper-slide">
                    <img src="{{ additionalVariant.image | image_url }}" alt="{{ additionalVariant.image.alt | escape }}">

                    {% if isSaveTitle %}
                      {% assign save_price = additionalVariant.compare_at_price | minus: additionalVariant.price %}
                      <div class="save-title">
                        <p>SAVE {{ save_price | money_without_trailing_zeros }}</p>
                      </div>
                    {% endif %}

                    {% if badgeImage %}
                      <img src="{{ badgeImage | image_url }}" alt="Curalin" class="sale-badge" loading="lazy">
                    {% endif %}
                  </div>
                {% endfor %}
              {% endif %}
            {% endif %}
          </div>

          <div class="swiper-pagination"></div>
        </div>

        <div id="product-main-slider-nav-prev-{{ section.id }}" class="swiper-button-prev swiper-nav"></div>
        <div id="product-main-slider-nav-next-{{ section.id }}" class="swiper-button-next swiper-nav"></div>
      </div>
    </div>
  </div>
</div>

<style>
  #product-thumbnails-{{ section.id }} {
    {% if first_3d_model %}
      .model-icon {
        position: absolute;
        top: 25%;
        left: 25%;
        font-size: 10px;
        color: white;
        border-radius: 50%;
        border: 2px solid white;
        width: 30%;
        height: 30%;
        padding: 0.5rem;
        background: rgba(255, 255, 255, 0.2);
      }
    {% endif %}

    {% if badgeImage %}
      .sale-badge {
        position: absolute;
        top: 10px;
        right: 50px;
        width: 100px;
        z-index: 1;
      }

      @media screen and (max-width: 768px) {
        .sale-badge {
          top: 0;
          right: 0;
          width: 25vw;
        }
      }
    {% endif %}

    .product-slider {
      .thumbs-slider {
        position: absolute;
        top: 90px;

        .swiper {
          max-height: 320px;
        }

        .swiper-nav {
          transform: rotate(90deg);
          width: 30px;
          height: 30px;
          position: relative;
          left: 35px;

          &.swiper-button-next {
            bottom: -30px;
          }

          &.swiper-button-prev {
            top: -10px;
          }

          &:after {
            font-size: 12px;
          }

          &.disabled {
            opacity: 0;
          }

          &:active {
            box-shadow: unset !important;
          }
        }

        .swiper-wrapper {
          img {
            width: 100px;
            height: 100px;
            border-radius: 5px;
            border: 1px solid #404733;
            object-fit: cover;
            display: flex;
            justify-content: center;
            align-items: center;
          }
        }
      }

      .main-slider {
        {% unless isHideThumbs %}
          margin-left: 160px;
        {% endunless %}

        .swiper {
          .swiper-wrapper {
            .swiper-slide {
              img {
                max-height: 550px;
              }

              .product-video {
                iframe {
                  height: 480px;
                  width: 100%;
                }
              }

              .img-wrap {
                padding: unset;
                text-align: center;
              }

              .save-title {
                position: absolute;
                z-index: 2;
                text-align: center;
                width: 100%;
                top: 50%;

                p {
                  background-image: url("{{ 'title-bg.svg' | asset_url }}");
                  background-size: contain;
                  background-repeat: no-repeat;
                  background-position: center;
                  padding: 5px;
                  width: 235px;
                  font-size: 35px;
                  font-weight: bold;
                  color: white;
                  margin: auto;
                }
              }
            }
          }

          .swiper-nav {
            display: none;

            &::after {
              font-size: 12px;
              color: var(--blue);
              font-weight: bold;
            }

            &.disabled {
              opacity: 0;
            }
          }
        }

        .swiper-button-prev,
        .swiper-button-next {
          color: grey;
          transition: opacity 0.5s;
          background: white;
          border-radius: 50%;
          width: 10vw;
          height: 10vw;
          box-shadow: 0px 3px 5px 0px rgba(0, 0, 0, 0.15);

          &::after {
            font-size: 28px;
          }
        }
      }
    }

    @media screen and (max-width: 768px) {
      grid-area: unset;
      grid-row: 2;

      .product-slider {
        margin-left: unset;

        .sliders-group::before {
          content: "";
          width: 100vw;
          position: absolute;
          top: 0;
          right: 50%;
          bottom: 0;
          z-index: -1;
          transform: translate(50%);
          pointer-events: none;
        }

        .main-slider {
          .swiper {
            max-width: 95%;

            .swiper-wrapper {
              align-items: center;

              .swiper-slide {
                .product-video {
                  iframe {
                    height: 45vh;
                  }
                }

                .product-img::before {
                  padding-bottom: 100%;
                }
              }
            }
          }

          .swiper-nav {
            display: flex;

            &.swiper-button-prev {
              left: -10px;
            }

            &.swiper-button-next {
              right: -10px;
            }
          }

          .swiper-pagination {
            .swiper-pagination-bullet {
              background: var(--green);
              opacity: 0.4;
              width: 13px;
              height: 13px;
              border: 0;

              &.swiper-pagination-bullet-active {
                opacity: 1;
              }
            }
          }
        }

        .thumbs-slider {
          display: none;
        }
      }
    }
  }
</style>

<!-- Optimized JavaScript Code -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Swiper sliders
    {% unless isHideThumbs %}
      const productThumbsSlider{{ SID }} = new Swiper('#thumbs-slider-{{ section.id }}', {
        direction: 'vertical',
        spaceBetween: 10,
        watchSlidesVisibility: false,
        grabCursor: true,
        slidesPerView: 3,
        navigation: {
          nextEl: '#product-thumbs-slider-nav-next-{{ section.id }}',
          prevEl: '#product-thumbs-slider-nav-prev-{{ section.id }}',
          disabledClass: 'disabled'
        }
      });
    {% endunless %}

    const productMainSlider{{ SID }} = new Swiper('#product-main-slider-sc-{{ section.id }}', {
      {% unless isHideThumbs %}
        thumbs: {
          swiper: productThumbsSlider{{ SID }}
        },
      {% endunless %}
      slidesPerView: 1,
      spaceBetween: 15,
      watchSlidesVisibility: true,
      grabCursor: false,
      slideToClickedSlide: true,
      breakpoints: {
        0: {
          allowTouchMove: false,
          navigation: {
            nextEl: '#product-main-slider-nav-next-{{ section.id }}',
            prevEl: '#product-main-slider-nav-prev-{{ section.id }}',
            disabledClass: 'disabled'
          }
        },
        760: {
          allowTouchMove: false,
          navigation: {}
        }
      }
    });

    // Track product image clicks
    const thumbsImages = document.querySelectorAll('#product-thumbnails-{{ section.id }} .thumbs-img');
    thumbsImages.forEach(function (img) {
      img.addEventListener('click', function () {
        woopra.track('Product Image Click', {});
      });
    });

    // Track arrow clicks
    const arrowSelectors = [
      '#product-thumbs-slider-nav-next-{{ section.id }}',
      '#product-thumbs-slider-nav-prev-{{ section.id }}'
    ];
    arrowSelectors.forEach(function (selector) {
      const arrowElement = document.querySelector(selector);
      if (arrowElement) {
        arrowElement.addEventListener('click', function () {
          woopra.track('Arrow Click', { section: 'Product' });
        });
      }
    });
  });
</script>
