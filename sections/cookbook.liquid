<section class="cookbook-page">
  <div class="container">
    <h1 class="main-title text-center">Curalife's CookBook</h1>

    <div class="cookbook-content">
      <div class="content">
        <div class="description">Download our e-book for a healthy & delicious blood sugar friendly diet!</div>
        {% if customer or page.content == 'open' %}
          <button class="download-cta"><a class="download-cookbook" href="{{ 'curalifes-cookbook.pdf' | file_url }}" download>Click Here to Download</a></button>
          <iframe allowfullscreen="allowfullscreen" scrolling="no" class="fp-iframe" style="border: 1px solid lightgrey; width: 100%; height: 400px;" src="https://heyzine.com/flip-book/d16c9bace2.html"></iframe>
        {% else %}
          <button class="download-cta disabled"><a href="javascript:void(0)" class="open-modal" data-fancybox data-src="#login-modal">Please Login To Download</a></button>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  @media(max-width: 768px) {
    .cookbook-page .container .cookbook-content {
      flex-direction: column;
      text-align: center;
      margin-top: unset
    }
  }

  .cookbook-page .container .cookbook-content .image-container {
    position: relative
  }

  .cookbook-page .container .cookbook-content .image-container .cookbook-image {
    max-width: 500px;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
  }

  @media(max-width: 720px) {
    .cookbook-page .container .cookbook-content .image-container .cookbook-image {
      max-width: 70%;
      margin-top: 10px
    }
  }

  .cookbook-page .container .cookbook-content .image-container .pen {
    position: absolute;
    bottom: -30px;
    left: -60px;
    z-index: 1;
    width: 230px
  }

  @media(max-width: 768px) {
    .cookbook-page .container .cookbook-content .image-container .pen {
      bottom: -10px;
      left: 30px;
      width: 100px
    }
  }

  .cookbook-page .container .cookbook-content .content {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
  }

  @media(max-width: 720px) {
    .cookbook-page .container .cookbook-content .content {
      margin-left: 0
    }
  }

  .cookbook-page .container .cookbook-content .content .description {
    font-size: 30px;
    max-width: 700px;
    margin: 0 auto
  }

  @media(max-width: 768px) {
    .cookbook-page .container .cookbook-content .content .description {
      font-size: 20px;
      padding: 10px;
      padding-bottom: 30px;
    }
  }

  .cookbook-page .container .cookbook-content .content .download-cta {
    width: fit-content;
    margin: 30px auto;
    font-weight: bold;
  }

  .cookbook-page .container .cookbook-content .content .download-cta.disabled {
    background-color: grey;
    color: white;
  }

  .cookbook-page .container .cookbook-content .content .download-cta p {
    margin: 0;
  }

  @media(max-width: 768px) {
    .cookbook-page .container .cookbook-content .content .download-cta {
      margin: 0;
      width: 100%;
    }
  }

  .cookbook-page .container .cookbook-content .content .download-cta a {
    color: #fff
  }

  .cookbook-page .container .cookbook-content .content .download-cta a p {
    margin: 0
  }

  .cookbook-page .container .cookbook-content .content .gallery {
    display: flex;
    justify-content: space-between
  }

  @media(max-width: 768px) {
    .cookbook-page .container .cookbook-content .content .gallery {
      margin-top: -120px
    }
  }

  .cookbook-page .container .cookbook-content .content .gallery img {
    max-width: 32%;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
  }
</style>

{% schema %}
  {
    "name": "Cookbook Page",
    "settings": []
  }
{% endschema %}