<section class="hero-section p-4 relative">
  <div class="container mx-auto text-center">
    <div class="top-bar flex justify-between items-center mb-8">
      <div class="flex items-center gap-4">
        <img src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/curalife-logo-white.png?v=1678034399" alt="Curaslim 2024 Logo">

        <div class="reviews flex items-center gap-2">
          <div class="stars flex">{% for star in (1..5) %}<i class="fa-sharp fa-solid fa-star text-[--orange] mr-1 font-thin"></i>{% endfor %}</div>
          <div class="text-xs text-white text-start">45,852 verified<br>reviews</div>
        </div>
      </div>

      <div>
        <button class="bg-white text-black py-2 px-4">Buy Now</button>
      </div>
    </div>

    <div class="content mb-8">
      <h1 class="text-white text-4xl font-bold">Lose Weight Fast</h1>
      <h2 class="italic text-2xl"><span class="text-[--orange]">With Curaslim's</span> powerful Triple-Action Formula!</h2>
      <button class="bg-[--orange] text-black py-2 px-4 mt-4">Buy Now</button>
    </div>

    <div class="images relative">
      <img class="review absolute top-0 left-1/2 transform -translate-x-1/2" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877448.png?v=1723474133" alt="Curaslim 2024 Hero Image 1">
      <img class="badge absolute top-20 left-10" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877668.png?v=1723474133" alt="Curaslim 2024 Hero Image 1">
      <img class="bottles absolute top-32 right-10" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877740.png?v=1723474133" alt="Curaslim 2024 Hero Image 1">
      <img class="badges absolute bottom-10 left-1/2 transform -translate-x-1/2" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877453.png?v=1723474133" alt="Curaslim 2024 Hero Image 2">
    </div>
  </div>
</section>

<section class="h-[600px]"></section>

<style>
  html, body {
    height: 100vh;
    margin: 0;
    overflow-x: hidden;
  }

  body {
    perspective: 1px;
    transform-style: preserve-3d;
  }

  section {
    width: 100%;
    min-height: 100vh;
    position: relative;
  }

  .hero-section {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    z-index: 1;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #3392C9 -8.06%, #13699C 55.18%, #083F5F 75.87%, #18638F 83.03%, #3593CA 100.13%, #4EACE2 103.87%);
    top: 0;
    left: 0;
    z-index: -1;
    transform: translateZ(-1px) scale(2.2);
    filter: blur(10px);
  }

  .top-bar {
    z-index: 1;
  }

  .content {
    z-index: 1;
  }

  .images img {
    z-index: 1;
  }
</style>

