<div class="product-recommendations">
  <h2>Take Control of Your Wellness</h2>

  <div class="product-slider">
    <button class="arrow-button prev-button">&lt;</button>
    <div class="product-list">
      {% for product in collections['all'].products limit: 8 %}
        <div class="product-item">
          <img src="{{ product.featured_image | img_url: '200x' }}" alt="{{ product.title }}" class="product-image">
          <p class="product-name">{{ product.title }}</p>
          <p class="product-price">{{ product.price | money }}</p>
        </div>
      {% endfor %}
    </div>
    <button class="arrow-button next-button">&gt;</button>
  </div>

  <a href="/collections/all" class="shop-button">
    Shop All Supplements
  </a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productList = document.querySelector('.product-list');
    const prevButton = document.querySelector('.prev-button');
    const nextButton = document.querySelector('.next-button');

    prevButton.addEventListener('click', () => {
      productList.scrollBy({ left: -200, behavior: 'smooth' });
    });

    nextButton.addEventListener('click', () => {
      productList.scrollBy({ left: 200, behavior: 'smooth' });
    });
  });
</script>

<style>
  .product-recommendations {
    padding: 2rem 0;
    text-align: center;
  }
  .product-list {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    overflow-x: auto;
    padding: 1rem 0;
  }
  .product-item {
    flex: 0 0 auto;
    width: 200px;
  }
  .product-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .product-name {
    margin: 0.5rem 0;
    font-weight: bold;
  }
  .product-price {
    color: #555;
  }
  .shop-button {
    background-color: #4a7c7d;
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    display: inline-block;
  }
  .arrow-button {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: #4a7c7d;
  }
</style>