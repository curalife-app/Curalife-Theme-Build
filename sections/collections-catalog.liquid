<div class="container">
  <h1>{{ section.settings.title }}</h1>
</div>

<style>
  .collections-catalog h1 {
    color: white;
    max-width: 50%;
    margin-inline-start: 50%;
    text-shadow: 0px 0px 8px rgba(0, 0, 0, 0.55);
    font-size: 35px;
    font-weight: normal;
  }

  .collections-catalog h1 span {
    font-size: 80px;
    font-weight: bold;
  }
</style>

{% schema %}
{
  "name": "Collections Catalog",
  "tag": "section",
  "class": "collections-catalog",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "Collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection_list",
          "id": "collection_list",
          "label": "Collections",
          "limit": 8
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Catalog"
    }
  ]
}
{% endschema %}