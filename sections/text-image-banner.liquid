<div class="container">
  <h2 class="text-center">{{ section.settings.title }}</h2>
</div>

<style>
  .text-with-image {
    background-color: {{ section.settings.background_color }};
  }
  .text-with-image .container {
    padding: 50px 0;
  }
  .text-with-image .container h2 {
    color: #fff;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
  }
  .text-with-image .container p {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.5;
  }
  .text-with-image .container img {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Text with Image",
  "tag": "section",
  "class": "text-with-image",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Text with Image"
    }
  ]
}
{% endschema %}