{% comment %}
	Quiz Web Components Configuration

	This snippet sets up the global configuration for quiz Web Components,
	including the correct Shopify CDN URL for the quiz.css file.

	Usage: {% render 'quiz-web-components-config' %}
	Usage with section: {% render 'quiz-web-components-config', section: section %}
{% endcomment %}

<script>
	// Set the correct Shopify CDN URL for quiz.css with cache busting
	window.QUIZ_CSS_URL = '{{ 'quiz.css' | asset_url }}?v={{ 'quiz.css' | asset_url | split: '?' | last | default: 'dev' }}';

	// Optional: Set other quiz-related configuration
	window.QUIZ_CONFIG = {
	  cssUrl: '{{ 'quiz.css' | asset_url }}?v={{ 'quiz.css' | asset_url | split: '?' | last | default: 'dev' }}',
	  assetsPath: '{{ 'dummy' | asset_url | split: '/dummy' | first }}',
	  shopDomain: '{{ shop.permanent_domain }}',
	  debug: true  // Always enable debug for now to help troubleshooting
	};

	// Debug logging - always enabled for troubleshooting
	console.log('üéØ Quiz Web Components Config:', window.QUIZ_CONFIG);
	console.log('üìç Quiz CSS URL:', window.QUIZ_CSS_URL);
</script>
