                  {% else %}
                    <div class="py-8 text-center">
                      <p class="text-gray-500">You haven't added any shipping addresses yet.</p>
                      <a href="/account/addresses" class="hover:bg-blue-700 inline-block px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg">Add Address</a>
