<!-- CSS -->
<style>
  :root {
    --bg: #E5E3FF;
    --primary-color: #0D007C;
    --modal-bg: #EFEEFE;
    --modal-gradient-start: rgba(229, 227, 255, 1);
    --modal-gradient-end: rgba(229, 227, 255, 0);
  }

  .pay-with-hsa-badge {
    display: inline-block;
    background-color: var(--bg);
    border-radius: 5px;
    font-weight: bold;
    padding: 0.5rem;
    max-width: 410px;
    text-align: center;
  }

  .pay-with-hsa-badge a {
    text-decoration: underline;
    font-style: italic;
    font-weight: normal;
    color: var(--primary-color);
    margin-left: 0.5rem;
  }

  /* Modal Styles */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s;
  }

  .modal.show {
    opacity: 1;
    visibility: visible;
  }

  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .modal.show .modal-backdrop {
    opacity: 1;
  }

  .modal-content {
    background: var(--modal-bg);
    margin: 3% auto;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    max-width: 1200px;
    width: 90%;
    transform: translateY(-20px);
    opacity: 0;
    transition: transform 0.3s, opacity 0.3s;
    position: relative;
    display: flex;
    flex-direction: column;
    max-height: 90vh;
    overflow: hidden;
  }

  .modal.show .modal-content {
    transform: translateY(0);
    opacity: 1;
  }

  .modal-body {
    flex-grow: 1;
    overflow-y: auto;
    position: relative;
  }

  .modal-body::after {
    content: "";
    height: 120px;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    background: linear-gradient(0deg, var(--modal-gradient-start) 50%, var(--modal-gradient-end) 100%);
  }

  .modal-content h2 {
    margin-bottom: 2rem;
    text-align: center;
  }

  #hsa-modal-content {
    display: flex;
    flex-wrap: wrap;
    gap: 3%;
  }

  .step {
    display: flex;
    align-items: flex-start;
    margin-bottom: 2rem;
    width: 30%;
  }

  .step-number {
    background-color: var(--primary-color);
    color: white;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .step-content {
    flex-grow: 1;
  }

  .step-content p {
    margin-bottom: 0.5rem;
    min-height: 75px;
    text-align: start;
  }

  .step-image img {
    max-width: calc(100% + 50px);
    margin-left: -50px;
    height: auto;
    display: block;
  }

  .close-icon {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 1.5rem;
    background: none;
    border: 2px solid var(--primary-color);
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    color: var(--primary-color);
  }

  .close-button {
    margin-top: auto;
    display: block;
    width: fit-content;
    margin: auto;
    padding: 0.75rem 2rem;
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 9999px;
    font-size: 1rem;
    cursor: pointer;
  }

  /* Mobile-specific adjustments */
  @media (max-width: 768px) {
    .modal-content {
      padding: 1rem;
      max-height: 97vh;
    }

    .modal-content h2 {
      font-size: 1.5rem;
    }

    #hsa-modal-content {
      flex-direction: column;
    }

    .step {
      width: 100%;
    }

    .step-number {
      margin-bottom: 0.5rem;
    }

    .step-content p {
      min-height: auto;
    }
  }
</style>

<!-- JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hsaModal = document.getElementById('hsa-modal');
    const hsaBadgeLink = document.getElementById('hsa-badge-link');
    const closeIcon = hsaModal.querySelector('.close-icon');
    const closeButton = hsaModal.querySelector('.close-button');
    const modalBackdrop = hsaModal.querySelector('.modal-backdrop');

    const toggleHSAModal = (show) => {
      hsaModal.classList.toggle('show', show);
      hsaModal.setAttribute('aria-hidden', !show);
      document.body.style.overflow = show ? 'hidden' : '';

      if (show) {
        // Lazy load images when modal is opened
        hsaModal.querySelectorAll('img[data-src]').forEach(img => {
          if (!img.src) img.src = img.dataset.src;
        });
      }
    };

    hsaBadgeLink.addEventListener('click', (event) => {
      event.preventDefault();
      toggleHSAModal(true);
    });

    [closeIcon, closeButton, modalBackdrop].forEach(element => {
      element.addEventListener('click', () => toggleHSAModal(false));
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && hsaModal.classList.contains('show')) {
        toggleHSAModal(false);
      }
    });
  });
</script>
