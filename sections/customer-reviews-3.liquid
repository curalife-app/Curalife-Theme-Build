<section class="customer-reviews">
  <div class="container relative">
    <h2 class="text-center relative z-10 text-[#3A7684]">Hear from our happy customers</h2>

    <div class="reviews swiper overflow-visible max-w-[80%]">
      <div class="swiper-wrapper">
        {% for review in section.blocks %}
          <div class="review swiper-slide flex flex-col justify-between text-center p-6 bg-[--light-blue] h-[600px] w-[330px] rounded-xl">
            <div class="review-wrapper">
              <img src="{{ review.settings.image | img_url: 'master' }}" alt="{{ review.settings.name }}" class="object-cover w-full h-full rounded-full">
              <div class="title font-bold text-black">{{ review.settings.title }}</div>
              <div class="quote text-black">{{ review.settings.quote }}</div>
              <div class="name absolute bottom-6 font-bold text-[#3A7684]">{{ review.settings.name }}</div>
            </div>
            <div class="stars pb-6 text-center">{% for star in (1..5) %}<i class="fa-sharp fa-solid fa-star text-[#FFB22D] mr-1"></i>{% endfor %}</div>
            </div>
        {% endfor %}
      </div>
      <div class="swiper-nav swiper-button-prev"></div>
      <div class="swiper-nav swiper-button-next"></div>
      {% comment %} <div class="swiper-pagination"></div> {% endcomment %}
    </div>
  </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<style>
  :root {
    --swiper-navigation-sides-offset: -40px;
    --swiper-pagination-bullet-height: 12px;
    --swiper-pagination-bullet-size: 12px;
  }

  .customer-reviews .swiper-slide {
    opacity: 0;
    transition: .4s;
  }

  .customer-reviews .swiper-slide-active,
  .customer-reviews .swiper-slide-next,
  .customer-reviews .swiper-slide-prev {
    opacity: 1;
  }

  .customer-reviews .swiper-3d .swiper-slide-shadow-left {
    background-image: linear-gradient(to left,rgb(48 72 143 / 20%),rgba(0,0,0,0));
  }

  .customer-reviews .swiper-3d .swiper-slide-shadow-right {
    background-image: linear-gradient(to right,rgb(48 72 143 / 20%),rgba(0,0,0,0));
  }

  .customer-reviews .swiper-nav::after {
    color: #3A7684;
    background: white;
    border: 2px solid #3A7684;
    border-left-width: 2px;
    border-radius: 50%;
    min-width: 50px;
    height: 50px;
    font-size: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 768px) {
    :root {
      --swiper-navigation-sides-offset: -8vw;
    }

    .customer-reviews .swiper-nav::after {
      min-width: 10vw;
      height: 10vw;
      font-size: 20px;
    }
  }
</style>

<script>
  const swiper = new Swiper('.customer-reviews .swiper', {
    grabCursor: true,
    centeredSlides: true,
    slidesPerView: 1,
    reverseDirection: true,
    loop: true,
    spaceBetween: 30,
    effect: "coverflow",
    coverflowEffect: {
        rotate: 0,
        depth: 200,
        slideShadows: true,
    },
    navigation: {
      nextEl: '.customer-reviews .swiper-button-next',
      prevEl: '.customer-reviews .swiper-button-prev',
    },
    // pagination: {
    //     el: '.customer-reviews .swiper-pagination',
    //     clickable: true
    // },
    // autoplay: { delay: 5000 }
  });

  window.onresize = queryResizer;
  queryResizer();
  function queryResizer() {
      if (window.innerWidth < 724) swiper.params.slidesPerView = 2;
      if (window.innerWidth > 501) swiper.params.slidesPerView = 2;
      if (window.innerWidth > 724) swiper.params.slidesPerView = 2.3;
      if (window.innerWidth < 501) swiper.params.slidesPerView = 1;
      swiper.update();
  }
</script>

