<!-- CSS -->
<style>
  :root {
    --primary-color: #3CB4D0;
    --primary-color-dark: #349bb5;
    --text-color: #4a5568;
    --border-color: #e2e8f0;
    --background-color: #fefefe;
  }

  .subscription-benefits {
    margin-top: 0.5rem;
  }

  .subscription-benefits h3 {
    color: var(--primary-color);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefits-list li {
    margin-bottom: 0.75rem;
    font-size: 16px;
  }

  .see-all-link {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--primary-color);
    font-size: 0.9rem;
    text-decoration: underline;
    font-weight: 600;
    transition: color 0.2s ease-in-out;
  }

  .see-all-link:hover {
    color: var(--primary-color-dark);
  }

  /* Modal Styles */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: none;
  }

  .modal.show {
    display: block;
  }

  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background: var(--background-color);
    margin: 5% auto;
    padding: 2rem;
    border-radius: 10px;
    max-width: 600px;
    width: 90%;
    position: relative;
  }

  .modal-content h2 {
    color: var(--primary-color);
    font-size: 1.5rem;
    margin-bottom: 1.25rem;
  }

  #benefits-list .benefit {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  #benefits-list .benefit:last-child {
    border-bottom: none;
  }

  .icon {
    width: 60px;
    margin-right: 1rem;
  }

  .content h3 {
    color: var(--primary-color);
    font-size: 1.125rem;
    margin: 0 0 0.3rem;
  }

  .content p {
    color: var(--text-color);
    font-size: 0.875rem;
    margin: 0;
  }

