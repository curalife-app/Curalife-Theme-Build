<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('.section-page-intro');
  const wrapper = document.querySelector('.page-intro-wrapper');
  const splitTop = document.querySelector('.page-intro-splitscreen-top');
  const splitBottom = document.querySelector('.page-intro-splitscreen-bottom');
  const nextSection = document.querySelector('.next-section-fade');

  function updateSplitScreen() {
    const scrollPosition = window.scrollY;
    const sectionHeight = section.offsetHeight;
    const viewportHeight = window.innerHeight;
    const scrollPercentage = (scrollPosition / (sectionHeight - viewportHeight)) * 100;

    if (scrollPercentage <= 100) {
      // Split screen animation
      const height = Math.min(scrollPercentage / 2, 50); // Divide by 2 to split the effect between top and bottom
      splitTop.style.height = `${height}%`;
      splitBottom.style.height = `${height}%`;
      splitTop.style.opacity = 1;
      splitBottom.style.opacity = 1;
    } else {
      // Ensure split screens cover the entire viewport
      splitTop.style.height = '50%';
      splitBottom.style.height = '50%';

      // Start fading out the white screens
      const fadeOutPercentage = Math.min((scrollPercentage - 100) * 2, 100);
      const opacity = 1 - (fadeOutPercentage / 100);
      splitTop.style.opacity = opacity;
      splitBottom.style.opacity = opacity;
    }

    if (scrollPercentage > 75 && scrollPercentage <= 100) {
      const fadePercentage = (scrollPercentage - 75) * 4;
      wrapper.style.opacity = Math.max(1 - (fadePercentage / 100), 0);
    } else if (scrollPercentage > 100) {
      wrapper.style.opacity = 0;
    } else {
      wrapper.style.opacity = 1;
    }

    if (scrollPercentage >= 100) {
      wrapper.style.position = 'absolute';
      wrapper.style.top = `${sectionHeight - viewportHeight}px`;
    } else {
      wrapper.style.position = 'fixed';
      wrapper.style.top = '0';
    }
  }

  window.addEventListener('scroll', updateSplitScreen);
  updateSplitScreen(); // Initial call
});
</script>

