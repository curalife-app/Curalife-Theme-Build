				display: flex;
				flex-direction: column;
				align-items: center;
				text-decoration: none;
				background-color: white;
				border-radius: var(--card-radius);
				padding: var(--spacing-lg);
				box-shadow: var(--shadow-sm);
				transition: var(--transition-base);
				border: var(--border-light);
				overflow: hidden;
				position: relative;

				&::after {
