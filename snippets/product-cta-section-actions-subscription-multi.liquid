{% assign subscriptionPrice = 75 %}

{% comment %} Short Section ID for JS Variables {% endcomment %}
{% assign sectionIDParts = section_id | split: '-' %}
{% assign shortSectionID = sectionIDParts[-1] %}

{% assign variantQuantity = product.variants | size %}

<div id="product-actions-{{ section_id }}" class="product-actions">
  <div class="purchase-options flex flex-col gap-2">
    {% for var in product.variants %}
      {% assign bottle_quantity = var.metafields.my_fields.pack_bottles_quantity %}
      {% assign original_item_cap = var.metafields.custom.original_item.value.compare_at_price %}
      {% assign original_item_cap_total = original_item_cap | times: bottle_quantity %}
      {% assign original_item_price = var.metafields.custom.original_item.value.price %}
      {% assign item_price = var.price | divided_by: bottle_quantity %}
      {% assign save_price = original_item_price | minus: item_price | times: quantity %}

      <div class="purchase-option-box flex flex-col items-start p-4">
        <div class="top-wrapper flex items-center w-full gap-4 pb-4">
          <div class="radio-box">
            <input type="radio" data-variant="{{ var.id }}" data-price="{{ var.price | money_without_currency | replace: ".00", "" }}" data-sku="{{ var.sku }}"></input>
            <label for="buyonce"></label>
          </div>

          <div class="option-title font-semibold">{{ var.title }} - Save up to {{ var.metafields.subscription.save_percents }}%</div>
        </div>

        <div class="purchase-type flex-nowrap flex w-full gap-2">
          <button class="active">Subscribe & Save</button>
          <button>Buy Once</button>
        </div>

        <div class="subscription-info bg-[--light-blue] text-[--blue] p-2 flex justify-center gap-2 my-4">
          <i class="fa-thin fa-badge-percent text-[50px]"></i>
          <div class="info text-[14px]">Save {{ var.metafields.subscription.save_percents }}% every order, guaranteed delivery, make changes any time, prompt VIP support & new subscriber gifts</div>
        </div>

        <div class="option-subtitle text-[14px]">{{ var.title }} <span class="text-[--blue] font-bold">{{ var.metafields.my_fields.subtitle }}</span></div>

        <div class="price-wrapper">
          <div class="calculations flex items-center gap-2 font-bold leading-10">
            <div class="real-price no-letters rounded text-[40px]">{{ item_price | money_without_trailing_zeros }}</div>
            <div class="compared-at-price rounded line-through text-[25px] text-[--light-blue]">{{ original_item_cap | money_without_trailing_zeros }}</div>
          </div>
          <div class="font-bold">Per Month</div>
        </div>

        <div class="submit-wrap flex flex-col w-full mt-4">
          <button class="main-btn p-0 bg-[--orange]" id="buy-button" onclick="buyButtonHandler()" style="min-height:50px">
            <span id="button-text">SHOP NOW<span class="pl-4 ml-4 border-l-2 border-white">Total {{ var.price | money_without_trailing_zeros }}</span></span>
            <div id="loader" style="display: none;">
              <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
            </div>
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% render 'script.round-converted-currency' %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    $("#product-actions-{{ section_id }} .purchase-option-box").click(function() {
      $("#product-actions-{{ section_id }} .pack-option").removeClass("selected");
      $("#product-actions-{{ section_id }} .purchase-option-box input[type='radio']").prop('checked', false);
      let radioButton = $(this).find('input');
      radioButton.prop('checked', true);
      {% if variantQuantity > 1 %} checkOption(); {% endif %}
    });

    $(".purchase-option-box").first().trigger('click');
    window.option_clicked_once = true;
  });
</script>

<script>
  function updateSelectedVariantInformation(infoAttributeName, targetElementToUpdate) {
    let varIndex = $('#product-actions-{{ section_id }} .pack-option.selected').first().attr(infoAttributeName);

    $(targetElementToUpdate).fadeOut(300, function () {
      varIndex > 1 ? $(targetElementToUpdate).text("X" + varIndex) : $(targetElementToUpdate).text("");
    }).fadeIn(300);
  }

  $("#product-actions-{{ section_id }} .pack-option").click(function() {
    $("#product-actions-{{ section_id }} .pack-option").removeClass("selected");
    $(this).addClass("selected");

    // Slide to Variant Image
    {% if product.variants.size > 1 and product.images.size > 1 %}
    if (window.option_clicked_once) {
      let slideIndex = window.productSliderAllInOne{{ shortSectionID }}.slides.length - ({{ product.variants.size | plus: 1 }} - $(this).attr('data-index'));
      window.productSliderAllInOne{{ shortSectionID }}.slideTo(slideIndex);
    }
    {% endif %}

    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      'event': 'variant-click',
      'label': $(this).attr('data-sku'),
      'userId': '{{ customer.id }}',
      'email': '{{ customer.email }}',
      'country': '{{customer.customer_address.country_code }}',
      'city': '{{customer.customer_address.city }}',
      'name': '{{ customer.first_name }}',
      'surname': '{{ customer.last_name }}',
      'phone_number': '{{customer.phone }}',
      'state': '{{customer.customer_address.province }}',       //state or province
      'zip': '{{customer.customer_address.zip }}'         //ZIP or Postal code
    });

    // Track in Woopra
    woopra.track('Product_Variant_Select', {
      sku: $(this).attr("data-sku"),
      variant_id: $(this).attr("value"),
      variant_title: $(this).attr("data-title"),
      price: $(this).attr("data-price")
    })
  });
</script>

<script>
  function clearCart(callback) {
    jQuery.ajax({
      type: 'POST',
      url: '/cart/clear.js',
      success: function() {
        console.log('Cart cleared');
        callback();
      },
      error: function() {
        console.log('Failed to clear cart');
      }
    });
  }

  function buySubscription(variant_id, qty, selling_plan) {
    clearCart(function() {
      data = {
        "id": variant_id,
        "quantity": qty,
        "selling_plan": selling_plan
      }

      jQuery.ajax({
        type: 'POST',
        url: '/cart/add.js',
        data: data,
        dataType: 'json',
        success: function() {
          console.log('success');
          window.location.href = '/checkout';
        },
        error: function() {
          console.log('Failed to add item to cart');
        }
      });
    });
  }

  // On Buy Button Click
  function buyButtonHandler() {
    console.log("Buy Button Pushed!");
    document.querySelector('#product-actions-{{ section_id }} #loader').style.display = 'block';
    document.querySelector('#product-actions-{{ section_id }} #button-text').style.display = 'none';

    if ($('#product-actions-{{ section_id }} .purchase-option-box.subscription-element').find('input:checked').length === 0) {
      {% if variantQuantity > 1 %}
        let checkedPack = $('#product-actions-{{ section_id }} .pack-option.selected').first().attr('data-value');
        console.log("Selected Variant ID: " + checkedPack);
      {% else %}
        let checkedPack = {{ product.variants.first.id }};
        console.log("Selected Variant ID else: " + checkedPack);
      {% endif %}

      let checkedQuantity = 1;
      let checkoutLink = "https://" + location.hostname + "/cart/" + checkedPack + ":" + checkedQuantity;
      console.log("Checkout Link: " + checkoutLink);
      window.location.href = checkoutLink;
    }
    else {
      // buySubscription(ID Of the variant, 1, External ID of the selling plan);
      // buySubscription({{ product.variants.first.id }}, 1, {{ product.selling_plan_groups[0].selling_plans[0].id }})
      buySubscription({{ product.metafields.custom.subscription_product_id }}, 1, {{ product.metafields.custom.subscription_selling_plan_id }})
    }
  };
</script>

