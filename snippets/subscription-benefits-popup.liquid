<div id="benefits-modal" class="modal" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-content">
    <h2 id="modal-title">Complimentary subscriber benefits:</h2>
    <ul id="benefits-list"></ul>
    <button class="close-button">Close</button>
  </div>
</div>

<style>
.modal {
  --primary: #2c7a7b;
  --text: #4a5568;
  --border: #e2e8f0;
  --bg: #fefefe;
  display: none;
  position: fixed;
  inset: 0;
  z-index: 1000;
  background: rgba(0,0,0,0.4);
  overflow: auto;
}
.modal-content {
  background: var(--bg);
  margin: 5% auto;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  max-width: 600px;
  width: 90%;
}
h2 {
  color: var(--primary);
  font-size: 1.5rem;
  margin-bottom: 1.25rem;
}
#benefits-list {
  list-style: none;
  padding: 0;
}
.benefit {
  display: flex;
  align-items: flex-start;
  padding-bottom: 1.25rem;
  margin-bottom: 1.25rem;
  border-bottom: 1px solid var(--border);
}
.benefit:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}
.icon {
  font-size: 1.5rem;
  margin-right: 1rem;
  flex-shrink: 0;
}
.content h3 {
  color: var(--primary);
  font-size: 1.125rem;
  margin: 0 0 0.3rem;
}
.content p {
  color: var(--text);
  font-size: 0.875rem;
  margin: 0;
}
.close-button {
  background: var(--primary);
  color: white;
  border: none;
  padding: 0.625rem 1.25rem;
  border-radius: 5px;
  font-size: 1rem;
  display: block;
  margin: 1.25rem auto 0;
  cursor: pointer;
  transition: background 0.3s;
}
.close-button:hover {
  background: #235c5c;
}
@media (max-width: 480px) {
  .modal-content { padding: 1rem; }
  h2 { font-size: 1.25rem; }
  .content h3 { font-size: 1rem; }
  .content p { font-size: 0.8125rem; }
}
</style>

<script>
const benefits = [
  ['📦', 'Free gift in every box!', 'Enjoy a special surprise with each purchase – a free gift just for you!'],
  ['👨‍⚕️', 'Free Expert Consultations', 'Enjoy free chats with Naturopathic and Nutrition Doctors to tailor your health plan'],
  ['💰', 'Best Price Guarantee', 'Enjoy unbeatable value with our best prices guaranteed all year round!'],
  ['🔄', 'Cancel, Pause, Delay or Change, Hassle Free', 'Manage your subscription effortlessly with options to cancel, pause, delay, or change anytime, without any hassle.'],
  ['⭐', 'Double & Triple Loyalty Points', 'At Curalife, you earn loyalty points with every order, which you can use to purchase our products later. As a subscription user, you will enjoy double and triple loyalty points rewards compared to regular orders.']
];

const modal = document.getElementById('benefits-modal');
const benefitsList = document.getElementById('benefits-list');

const toggleModal = show => {
  modal.style.display = show ? 'block' : 'none';
  modal.setAttribute('aria-hidden', !show);
  document.body.style.overflow = show ? 'hidden' : '';
};

const createBenefit = ([icon, title, description]) => {
  const li = document.createElement('li');
  li.className = 'benefit';
  li.innerHTML = `
    <span class="icon" aria-hidden="true">${icon}</span>
    <div class="content">
      <h3>${title}</h3>
      <p>${description}</p>
    </div>
  `;
  return li;
};

benefitsList.append(...benefits.map(createBenefit));

modal.querySelector('.close-button').addEventListener('click', () => toggleModal(false));

window.addEventListener('click', event => {
  if (event.target === modal) toggleModal(false);
});

document.getElementById('see-all-benefits').addEventListener('click', () => toggleModal(true));

document.addEventListener('keydown', event => {
  if (event.key === 'Escape' && modal.style.display === 'block') toggleModal(false);
});
</script>