<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('.section-page-intro');
  const wrapper = document.querySelector('.page-intro-wrapper');
  const splitTop = document.querySelector('.page-intro-splitscreen-top');
  const splitBottom = document.querySelector('.page-intro-splitscreen-bottom');
  const splitFullBottom = document.querySelector('.page-intro-splitscreen-full-bottom');
  const nextSection = document.querySelector('.next-section-fade');
  const topBar = document.getElementById('top-bar');

  const isMobile = window.innerWidth <= 768;
  const speedFactor = isMobile ? 1 : 1.5;

  let lastScrollPosition = 0;
  let ticking = false;

  function updateSplitScreen(scrollPosition) {
    const sectionHeight = section.offsetHeight;
    const viewportHeight = window.innerHeight;
    const scrollPercentage = (scrollPosition / (sectionHeight - viewportHeight)) * 100;
    const adjustedScrollPercentage = scrollPercentage * speedFactor;

    if (adjustedScrollPercentage <= 100) {
      const centerHeight = Math.min(adjustedScrollPercentage / 2, 25);
      const bottomHeight = Math.min(adjustedScrollPercentage, 50);

      splitTop.style.height = `${centerHeight}%`;
      splitBottom.style.height = `${centerHeight}%`;
      splitFullBottom.style.height = `${bottomHeight}%`;

      splitTop.style.opacity = splitBottom.style.opacity = splitFullBottom.style.opacity = 1;
      topBar.style.opacity = '0';
      topBar.classList.remove('floating');

      nextSection.style.opacity = '0';
      nextSection.style.visibility = 'hidden';
    } else {
      const fadeOutPercentage = Math.min((adjustedScrollPercentage - 100) * 2, 100);
      const opacity = 1 - (fadeOutPercentage / 100);

      splitTop.style.opacity = splitBottom.style.opacity = splitFullBottom.style.opacity = opacity;

      if (fadeOutPercentage >= 100) {
        topBar.classList.add('floating');
        const topBarOpacity = Math.min((adjustedScrollPercentage - 150) / 50, 1);
        topBar.style.opacity = topBarOpacity.toString();
        topBar.style.background = `linear-gradient(0deg, rgba(15, 114, 176, ${topBarOpacity}) 0%, rgba(15, 124, 191, ${topBarOpacity}) 100%)`;
        topBar.style.boxShadow = `0 2px 5px rgba(0,0,0,${topBarOpacity * 0.1})`;
      } else {
        topBar.classList.remove('floating');
        topBar.style.opacity = '0';
      }

      // Fade in the next section
      const fadeInStart = isMobile ? 300 : 100; // Start fade-in later on mobile
      const fadeInDuration = isMobile ? 200 : 50; // Longer fade-in duration on mobile
      const nextSectionOpacity = Math.min(Math.max((adjustedScrollPercentage - fadeInStart) / fadeInDuration, 0), 1);
      nextSection.style.opacity = nextSectionOpacity.toString();
      nextSection.style.visibility = nextSectionOpacity > 0 ? 'visible' : 'hidden';
    }

    wrapper.style.opacity = adjustedScrollPercentage > 75 ? Math.max(1 - ((adjustedScrollPercentage - 75) * 4 / 100), 0) : 1;

    if (adjustedScrollPercentage >= 100) {
      wrapper.style.position = 'absolute';
      wrapper.style.top = `${sectionHeight - viewportHeight}px`;
    } else {
      wrapper.style.position = 'fixed';
      wrapper.style.top = '0';
    }

    // Update next section position
    if (isMobile) {
      // Use vw units for mobile
      const mobileTopPosition = 300; // Adjust this value to control when the next section appears
      nextSection.style.top = `${mobileTopPosition}vw`;
    } else {
      nextSection.style.top = '100vh';
    }
  }

  function onScroll() {
    lastScrollPosition = window.scrollY;
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateSplitScreen(lastScrollPosition);
        ticking = false;
      });
      ticking = true;
    }
  }

  window.addEventListener('scroll', onScroll, { passive: true });
  updateSplitScreen(window.scrollY);
});
</script>

