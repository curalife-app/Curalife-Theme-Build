<div class="product-recommendations">
  <h2>Take Control of Your Wellness</h2>

  <div class="swiper product-slider">
    <div class="swiper-wrapper">
      {% for product in collections['all'].products limit: 8 %}
        <div class="swiper-slide product-item">
          <img src="{{ product.featured_image | img_url: '200x' }}" alt="{{ product.title }}" class="product-image">
          <p class="product-name">{{ product.title }}</p>
          <p class="product-price">{{ product.price | money }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

  <a href="/collections/all" class="shop-button">
    Shop All Supplements
  </a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.product-slider', {
      slidesPerView: 1,
      spaceBetween: 10,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 40,
        },
      },
    });
  });
</script>

<style>
  .product-recommendations {
    padding: 2rem 0;
    text-align: center;
  }
  .product-slider {
    margin: 2rem 0;
  }
  .product-item {
    width: 200px;
  }
  .product-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .product-name {
    margin: 0.5rem 0;
    font-weight: bold;
  }
  .product-price {
    color: #555;
  }
  .shop-button {
    background-color: #4a7c7d;
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    display: inline-block;
    margin-top: 1rem;
  }
  .swiper-button-prev,
  .swiper-button-next {
    color: #4a7c7d;
  }
</style>