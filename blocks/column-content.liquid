<div class="column-content-block flex flex-col gap-4">
	{% content_for 'blocks' %}
</div>

{% schema %}
	{
		"name": "Column Content",
		"blocks": [{ "type": "@theme" }, { "type": "@app" }],
		"settings": [
			{
				"type": "paragraph",
				"content": "Add content blocks (text, image, button, etc.) inside this column."
			},
			{
				"type": "range",
				"id": "column_width",
				"label": "Column Width (Fraction of Total)",
				"min": 1,
				"max": 12,
				"step": 1,
				"default": 6,
				"info": "Defines width based on a 12-unit grid. Adjust section's column count setting accordingly."
			}
		],
		"presets": [
			{
				"name": "Column Content"
			}
		]
	}
{% endschema %}
