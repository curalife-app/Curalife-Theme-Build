<div class="recipe-content flex flex-col max-w-4xl gap-8 px-4 mx-auto mb-10">
	<div class="recipe-details-table overflow-hidden rounded-lg shadow-sm">
		<div class="recipe-details flex bg-[#fff4ed] p-5">
			<div class="calories w-1/2 text-center font-bold border-r border-[#a86129]">
				<i class="fa-solid fa-weight-scale mr-2"></i>
				{{ calories }}kcal
			</div>
			<div class="time w-1/2 font-bold text-center">
				<i class="fa-solid fa-clock mr-2"></i>
				{{ duration }}
			</div>
		</div>

		{% if fat %}
			<div class="nutrients flex flex-wrap p-4 bg-white">
				<div class="nutrient-fat md:w-1/4 w-1/2 text-[#a86129] text-center md:border-r border-[#a86129] p-2">
					<div class="font-semibold">Fat</div>
					<div>{{ fat }}</div>
				</div>
				<div class="nutrient-carbs md:w-1/4 w-1/2 text-[#a86129] text-center md:border-r border-[#a86129] p-2">
					<div class="font-semibold">Carbs</div>
					<div>{{ carbs }}</div>
				</div>
				<div class="nutrient-protein md:w-1/4 w-1/2 text-[#a86129] text-center md:border-r border-[#a86129] p-2 mt-2 md:mt-0">
					<div class="font-semibold">Protein</div>
					<div>{{ protein }}</div>
				</div>
				<div class="nutrient-fiber md:w-1/4 w-1/2 text-[#a86129] text-center p-2 mt-2 md:mt-0">
					<div class="font-semibold">Fiber</div>
					<div>{{ fiber }}</div>
				</div>
			</div>
		{% endif %}
	</div>

	<div class="ingredients p-6 bg-white rounded-lg shadow-sm">
		<h3 class="text-xl font-bold mb-4 text-[#a86129] border-b pb-2">Ingredients</h3>
		<ul class="space-y-2">
			{% for ingredient in ingredients %}
				<li class="flex items-start">
					<span class="text-[#a86129] mr-2">â€¢</span>
					<span>{{ ingredient }}</span>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="instructions p-6 bg-white rounded-lg shadow-sm">
		<h3 class="text-xl font-bold mb-4 text-[#a86129] border-b pb-2">Instructions</h3>
		{% for instruction in instructions %}
			<div class="text-instructions">
				<div class="sub-instructions"></div>
				<div class="text-instruction">{{ instruction }}</div>
			</div>
		{% endfor %}
	</div>
</div>

<style>
	.recipe-content {
		font-family: var(--font-body-family);
	}

	.recipe-content .instructions .text-instructions {
		display: flex;
		counter-increment: instructions-counter;
		margin-bottom: 20px;
		align-items: flex-start;
	}

	.recipe-content .instructions .text-instructions .sub-instructions::before {
		content: counter(instructions-counter);
		display: inline-flex;
		justify-content: center;
		align-items: center;
		color: var(--blue);
		background: var(--light-blue);
		width: 36px;
		height: 36px;
		font-weight: bold;
		border-radius: 50%;
		margin-right: 1rem;
		flex-shrink: 0;
	}

	.recipe-content .ingredients ul li {
		position: relative;
		padding-left: 0.25rem;
	}

	@media (max-width: 768px) {
		.nutrient-fat,
		.nutrient-carbs {
			border-bottom: 1px solid #a86129;
			padding-bottom: 0.75rem;
		}
	}
</style>
