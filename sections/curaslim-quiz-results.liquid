<script>
  function insertUrlParamsToHtml() {
      console.log("Starting to process URL parameters...");
      const urlParams = new URLSearchParams(window.location.search);

      urlParams.forEach((value, key) => {
          console.log(`Processing parameter: ${key} with value: ${value}`);
          let element = document.getElementById(key);
          if (element) {
              if (key === 'can') {
                  let processedValue = parseFloat(value) * 0.0750;
                  console.log(`Original value of 'can': ${value}, Processed value: ${processedValue}`);
                  element.textContent = processedValue.toFixed(2); // Adjust to 2 decimal places
              } else {
                  console.log(`Found element with ID: ${key}. Setting text content to: ${value}`);
                  element.textContent = value;
              }
          } else {
              console.warn(`No element found with ID: ${key}`);
          }
      });
      console.log("Finished processing URL parameters.");
  }

  // Immediately run the function
  insertUrlParamsToHtml();
</script>

