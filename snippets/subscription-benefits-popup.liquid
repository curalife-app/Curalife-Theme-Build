</style>

<!-- JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('benefits-modal');
    const seeAllLink = document.getElementById('see-all-benefits');
    const closeButton = modal.querySelector('.close-button');
    const modalBackdrop = modal.querySelector('.modal-backdrop');

    const toggleModal = (show) => {
      modal.classList.toggle('show', show);
      document.body.style.overflow = show ? 'hidden' : '';
      modal.setAttribute('aria-hidden', !show);
    };

    seeAllLink.addEventListener('click', (event) => {
      event.preventDefault();
      toggleModal(true);
    });

    closeButton.addEventListener('click', () => toggleModal(false));
    modalBackdrop.addEventListener('click', () => toggleModal(false));

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && modal.classList.contains('show')) {
        toggleModal(false);
      }
    });
  });
</script>
